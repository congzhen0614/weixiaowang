.peridocial-ording-home
	width 100%
	height 100%
	// padding-top 0.88rem
	padding-top 0.8rem
	.tab
		position fixed
		top 0
		display: flex
		width: 100%
		text-align: center
		z-index 3
		background #ffffff
		> div
			box-sizing: content-box
			flex: 1
			height 0.88rem
			line-height: 0.88rem
			font-size: 0.28rem
			color: #323232
			border-bottom: 0.01rem solid #d6d6d6
		.active
			height 0.86rem
			border-bottom: 0.04rem solid #F8BD48
			color: #FFBE4D