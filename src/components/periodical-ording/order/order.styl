@import '../../../common/stylus/mixin.styl'
.order
	height 100%
	.periodical-order
		width 100%
		min-height 100%
		background #f0f0f0
		.underline
			border-1px(#e6e6e6)
		.header
			width 100%
			height 2rem
			background #fffde0
			.border-bg
				width 100%
				height 0.12rem
				background url('border_bg.png') 0 0 repeat-x
				background-position -0.6rem 0
				background-size 1.04rem
			.main
				height 1.76rem
				line-height 1.76rem
				position relative
				display flex
				overflow hidden
				.left-part
					flex 1
					overflow hidden
					padding-left 0.32rem
					height 1.76rem
					line-height 1.76rem
					display -webkit-box
					-webkit-box-orient horizontal
					-webkit-box-pack center
					-webkit-box-align center
					.address-box
						width 100%
						.contract
							// margin-top 0.3rem
							display flex
							width 100%
							font-size 0.34rem
							line-height 0.34rem
							.name
								display inline-block
								flex 1
							.mobile
								display inline-block
								text-align right
						.address-text
							width 100%
							margin-top 0.2rem
							padding-right 0.32rem
							font-size 0.26rem
							line-height 0.34rem
							color #84836d
							overflow hidden
							text-overflow ellipsis
							display -webkit-box
							-webkit-line-clamp 2
							-webkit-box-orient vertical
					> .no-address
						width 100%
						color #84836D
						font-size 0.28rem
						line-height 1.76rem
				.right-arrow
					padding 0 0.32rem
					> img
						display inline-block
						width 0.16rem
						height 0.26rem
						margin-top 0rem
						vertical-align middle
		.product
			width 100%
			background #ffffff
			.title
				padding 0 0.32rem
				font-size 0.3rem
				line-height 0.88rem
				color #333333
				background #f8f7f6
			.list
				padding-left 0.32rem
				.list-item
					padding 0.3rem 0.32rem 0.3rem 0
					display flex
					.left-media
						width 1.6rem
						height 1.6rem
						line-height 1.6rem
						font-size 0
						padding 0.02rem
						border 1px solid #d6d6d6
						border-radius 0.1rem
						text-align center
						overflow hidden
						> img
							display inline-block
							max-width 100%
							max-height 100%
							min-width 50%
							min-height 50%
							vertical-align top
					.right-desc
						flex 1
						position relative
						margin-left 0.2rem
						height 1.6rem
						display -webkit-box
						-webkit-box-orient horizontal
						-webkit-box-pack center
						-webkit-box-align center
						.box
							width 100%
							.name
								font-size 0.3rem
								line-height 0.38rem
								color #333333
								overflow hidden
								text-overflow ellipsis
								display -webkit-box
								-webkit-line-clamp 2
								-webkit-box-orient vertical
							.price
								margin-top 0.1rem
								font-size 0.2rem
								color #f8bd48
								line-height 0.34rem
								> .big
									font-size 0.34rem
									vertical-align baseline
							.dot
								position absolute
								display inline-block
								min-width 0.4rem
								// height 0.4rem
								bottom 0
								right 0
								background-color #f8bd48
								color #ffffff
								font-size 0.28rem
								line-height 0.28rem
								padding 0.06rem 0.14rem
								border-radius 0.4rem
		.message
			display flex
			padding 0 0.32rem
			font-size 0.3rem
			line-height 0.88rem
			background #ffffff
			.title
				// flex 1
				margin-right 0.2rem
				color #523f1a
			.placeholder
				flex 2
				overflow hidden
				text-overflow ellipsis
				white-space: nowrap
				text-align right
				color #c7c7cc
			.right-arrow
				padding-left 0.32rem
				> img
					display inline-block
					width 0.16rem
					height 0.26rem
					vertical-align middle
		.amount
			padding 0.1rem 0.32rem 0.34rem
			// margin-bottom 1rem
			background #ffffff
			> .price
				display flex
				margin-top 0.24rem
				font-size 0.3rem
				line-height 0.3rem
				> .title
					flex 1
					display inline-block
					color #9a968d
				> .num
					flex 1
					display inline-block
					font-size 0.2rem
					text-align right
					> .big
						font-size 0.3rem
						vertical-align baseline
		.bottom
			position: fixed
			bottom: 0
			z-index 10
			width 100%
			display flex
			height 1rem
			line-height 1rem
			box-shadow 0 -0.04rem 0.1rem 0 rgba(0, 0, 0, 0.1)
			.left-part
				flex 2
				padding-left 0.32rem
				background-color: #ffffff
				p
					font-size 0
					line-height 1rem
					> .title
						font-size 0.2rem
						color #5a541e
						vertical-align middle
					> .price
						font-size 0.2rem
						color #f5b039
						vertical-align middle
						> .big
							font-size 0.48rem
							vertical-align baseline
			.right-button
				flex 1
				text-align center
				font-size 0.34rem
				line-height 1rem
				color rgba(255, 255, 255, 1)
				background linear-gradient(to left, #fe7a56, #ff5050)