@import '../../../common/stylus/mixin.styl'
.ording-list
	width 100%
	// padding 0 0.2rem
	// margin-top -0.8rem
	.list
		width 100%
		padding-bottom 1rem
		.scroller
			margin-top 0.8rem
			padding-bottom 1rem
			width 100%
		.underline
			border-1px(#e6e6e6)
		.list-item
			display flex
			position relative
			padding 0.3rem 0.2rem
			.left-media
				width 2.4rem
				height 2.4rem
				line-height 2.4rem
				padding 0.1rem 0
				background-repeat no-repeat
				background-size 100%
				text-align center
				> img
					display inline-block
					max-width 100%
					max-height 100%
					min-width 50%
					min-height 50%
					margin 0 auto
					vertical-align middle
			.right-part
				flex 1
				overflow hidden
				margin-left 0.2rem
				height 2.6rem
				display -webkit-box
				-webkit-box-orient horizontal
				-webkit-box-pack center
				-webkit-box-align center
				.box
					width 100%
					.title
						margin-top 0.06rem
						width 100%
						font-size 0.32rem
						color #333333
						overflow: hidden
						text-overflow: ellipsis
						display: -webkit-box
						-webkit-line-clamp: 2
						-webkit-box-orient: vertical
					.desc
						font-size 0
						display flex
						margin-top 0.2rem
						> img
							width 0.24rem
							height 0.24rem
							display inline-block
							vertical-align middle
						.text
							display inline-block
							padding-right 0.1rem
							margin-left 0.1rem
							overflow hidden
							text-overflow ellipsis
							white-space nowrap
							font-size 0.24rem
							color #9c9890
							line-height 0.24rem
							vertical-align middle
					.time
						margin-top 0.2rem
						font-size 0.24rem
						line-height 0.24rem
						color #9c9890
					.bottom
						margin-top 0.2rem
						width 100%
						display flex
						height 0.48rem
						.price
							flex 1
							font-size 0.24rem
							line-height 0.32rem
							color #262626
							vertical-align middle
							> .big
								font-size 0.32rem
								vertical-align baseline
							