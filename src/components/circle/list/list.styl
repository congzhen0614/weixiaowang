@import '../../../common/stylus/mixin.styl'
.circle-list
	padding 0
	.list-item
		padding 0.4rem 0.2rem
		overflow hidden
		border-1px(#e6e6e6)
		.title
			font-size 0
			line-height 0.48rem
			width 100%
			overflow hidden
			> .text
				display inline-block
				font-size 0.34rem
				vertical-align middle
				color #333333
				max-width 80%
				overflow hidden
				text-overflow ellipsis
				white-space nowrap
			> .color-label
				display inline-block
				width 0.32rem
				height 0.32rem
				text-align center
				margin-left 0.1rem
				font-size 0.24rem
				line-height 0.32rem
				color #ffffff
				vertical-align middle
				&.c00b7ee
					background #00b7ee
				&.c3fc97d
					background #3fc97d
				&.cf7996c
					background #f7996c
		.media-list
			margin-top 0.3rem
			width 100%
			display flex
			position relative
			> .img-item
				flex 1
				margin-right 0.1rem
				overflow hidden
				// height 1.38rem
				// line-height 1.38rem
				text-align center
				&:last-child
					margin-right 0
				> img
					display inline-block
					// max-width 100%
					// max-height 100%
					// min-width 100%
					min-height 100%
					width 100%
					vertical-align middle
			> .video-icon
				position absolute
				top 50%
				left 50%
				z-index 2
				margin-left -0.5rem
				margin-top -0.5rem
				width 1rem
				height 1rem
				> img
					display inline-block
					width 100%
					height 100%
			> .video-box
				// position absolute
				// z-index 1
				// width 100%
				// height 100%
				overflow hidden
				text-align center
				> video
					display inline-block
					max-width 100%
					max-height 100%
		.bottom
			width 100%
			margin-top 0.3rem
			display flex
			.left-part
				flex 1
				font-size 0
				line-height 0.4rem
				> .item
					display inline-block
					font-size 0
					margin-right 0.4rem
					> img
						display inline-block
						margin-right 0.1rem
						width 0.24rem
						height 0.24rem
						vertical-align middle
					> .count
						font-size 0.24rem
						color #9c9890
						vertical-align middle
			.right-part
				padding 0
				font-size 0
				line-height 0.4rem
				.avatar
					display inline-block
					margin-right 0.1rem
					width 0.4rem
					height 0.4rem
					vertical-align middle
				.name
					font-size 0.24rem
					color #9c9890
					vertical-align middle
		.other
			margin-top 0.2rem
			width 100%
			font-size 0
			> .other-label
				display inline-block
				margin-right 0.1rem
				padding 0 0.1rem
				font-size 0.24rem
				line-height 0.34rem
				color #ff6060
				border 0.02rem solid #ff6060
				&.type
					color #ffffff
					background #ff6060
			> .close-icon
				float right
				margin-right -0.2rem
				margin-top  -0.2rem
				display inline-block
				line-height 0.34rem
				padding 0.2rem
				vertical-align middle
				> img
					display inline-block
					width 0.4rem
					height 0.32rem
					vertical-align middle