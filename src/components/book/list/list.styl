.book-list
	width 100%
	.list-item
		position relative
		padding 0.3rem 0.2rem
		&.dis-flex
			display flex
		&.mall-item, .activity-item
			padding 0.2rem
		.left-media
			width 2.4rem
			height 2.4rem
			line-height 2.4rem
			padding 0.1rem 0
			background-repeat no-repeat
			background-size 100%
			text-align center
			> img
				max-width 100%
				max-height 100%
				min-width 50%
				min-height 50%
				margin 0 auto
				vertical-align middle
		.right-part
			flex 1
			overflow hidden
			margin-left 0.2rem
			height 2.6rem
			display -webkit-box
			-webkit-box-orient horizontal
			-webkit-box-pack center
			-webkit-box-align center
			.box
				width 100%
				.title
					margin-top 0.06rem
					width 100%
					font-size 0.32rem
					color #262626
					overflow: hidden
					text-overflow: ellipsis
					white-space nowrap
				.desc
					font-size 0
					display flex
					margin-top 0.2rem
					> img
						width 0.24rem
						height 0.24rem
						display inline-block
						vertical-align middle
					.text
						display inline-block
						padding-right 0.1rem
						margin-left 0.1rem
						overflow hidden
						text-overflow ellipsis
						white-space nowrap
						font-size 0.24rem
						color #9c9890
						line-height 0.24rem
						vertical-align middle
				.gift
					font-size 0
					display flex
					margin-top 0.12rem
					> .icon
						display inline-block
						font-size 0.24rem
						line-height 0.24rem
						color #fff
						padding 0.02rem
						background #ff6060
						border-radius 0.06rem
						vertical-align middle
					.text
						display inline-block
						padding-right 0.1rem
						margin-left 0.12rem
						overflow hidden
						text-overflow ellipsis
						white-space nowrap
						font-size 0.28rem
						color #666
						line-height 0.28rem
						vertical-align middle
				.suggest
					margin-top 0.2rem
					font-size 0
					line-height 0.24rem
					color #f5b039
					.times
						display inline-block
						font-size 0.24rem
						&.borderRight
							border-right 0.01rem solid #cdcdcd
					.grade
						font-size 0.24rem
				.cycle
					margin-top 0.12rem
					font-size 0
					.times
						font-size 0.28rem
						line-height 0.28rem
						color #f8bd48
				.bottom
					margin-top 0.2rem
					width 100%
					display flex
					height 0.28rem
					line-height 0.28rem
					.price
						font-size 0.24rem
						line-height 0.28rem
						color #666
						vertical-align middle
						> .big
							font-size 0.28rem
							vertical-align top
						&.old-price
							margin-left 0.4rem
							color #999
							text-decoration line-through
				.cart
					margin-top 0.3rem
					padding-right 0.22rem
					text-align right
					&.half-margin-top
						margin-top 0.15rem
					> span
						display inline-block
						font-size 0.24rem
						line-height 0.24rem
						color #333
						padding 0.08rem 0.2rem
						background #f0f0f0
						border-radius 0.2rem
						&:first-child
							margin-right 0.2rem