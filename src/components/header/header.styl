@import '../../common/stylus/mixin.styl'
.top-header
	display: flex
	padding: 0 0.2rem
	position: fixed !important
	top: 0
	right: 0
	left: 0
	z-index: 999
	background: #fff
	&.underline
		border-1px(#d6d6d6)
	.apply
		color: #262323
		font-size: 0.34rem
	.left-part
		width: 1rem
		line-height 0.8rem
		.back-icon
			display inline-block
			width: 0.6rem
			height: 0.6rem
			background url('back_icon.png') no-repeat center
			background-size 0.6rem
			vertical-align middle
		.home-icon
			width: 0.6rem
			height: 0.6rem
			background: url('back_icon.png') no-repeat center
			background-size: 100%
			margin-top: 0.1rem
	.right-part
		width: 1rem
		text-align center
		vertical-align middle
		> div
			width: 0.4rem
			height: 0.4rem
			margin-top: 0.2rem
		.right-icon-1
			width: 0.4rem
			height: 0.4rem
			float: right
		.right-icon-2
			> div
				width: 100%
				height 100%
				background: url('collect.png') no-repeat center
				background-size: 100%
				&.active
					background: url('collect_active.png') no-repeat center
		.search
			background: url('search_icon.png') no-repeat center
			background-size: 100%
		.share
			background: url('share_logo.png') no-repeat center
			background-size: 100%
		.shopcat
			position: relative
			width: 0.4rem
			height: 0.4rem
			float: right
			background: url('shopcat_icon.png') no-repeat center
			background-size: 100%
			margin-right: 0.6rem
			.dot
				border-radius: 50%
				width: 0.24rem
				height: 0.24rem
				font-size: 0.2rem
				line-height: 0.24rem
				background-color: red
				position: absolute
				top: -0.1rem
				right: -0.2rem
				z-index: 4
				color: #fff
				text-align: center
	p
		flex: 1
		font-size: 0.34rem
		font-family 'PingFang-SC-Medium'
		font-weight 500
		height: 0.8rem
		line-height: 0.8rem
		// color: #323232
		color: #523f1a
		text-align: center
