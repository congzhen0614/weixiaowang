.comment
  padding-top 0.4rem
  .comment-title
    color #9C9890
    padding 0 0.2rem
    font-size 0.32rem
  > ul
    > li
      padding: 0.4rem 0.2rem
      border-bottom 1px solid #E6E6E6
      display flex
      flex-direction row
      .comment-head-portrait
        width 0.52rem
        height 0.52rem
        margin-right 0.2rem
        > img
          width 100%
          height 100%
          border-radius 50%
      .comment-content
        width 100%
        .comment-content-top
          display flex
          justify-content space-between
          margin-bottom 0.4rem
          height 0.52rem
          line-height 0.52rem
          .comment-content-title
            display block
            font-size 0.26rem
            color #9C9890
          .comment-content-zan
            > img
              width 0.24rem
              height 0.24rem
            > span
              color #999999
              font-size 0.24rem
              margin-left 0.1rem
        .comment-content-middle
          font-size 0.34rem
          color #333333
          .comment-content-images
            display flex
            margin-top 0.3rem
            flex-direction: row
            > img
              width 1.2rem
              height 1.2rem
              border-radius 2px
              margin-right 0.1rem
        .comment-content-bottom
          display flex
          justify-content flex-start
          margin-top 0.3rem
          .comment-content-icon
            margin-right 0.4rem
            > img
              width 0.24rem
              height 0.24rem
              margin-right 0.1rem
            .place-icon
              width 0.2rem
              height 0.24rem
            > span
              font-size 0.24rem
              color #9C9890
    > li:last-child
      border none
