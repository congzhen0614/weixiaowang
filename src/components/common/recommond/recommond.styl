@import "../../../common/stylus/mixin.styl"
.recommond
  padding: 0 0.2rem
  background-color #f0f0f0
  .title
    width 90%
    display flex
    margin 0.6rem auto
    .line
      flex: 1
      position relative
      top -0.1rem
      border-bottom 1px dashed #a0a0a0
    .text
      padding 0 0.2rem
      font-size 0.28rem
      font-weight 700px
      color: #888888
  .book-list
    line-height: 1.5
    .item
      display flex
      margin-bottom: 0.1rem
      .book
        flex: 1
        background #fff
        font-size: 0.24rem
        color: #888888
        .img
          width: 100%
          border-1px(#d6d6d6)
          > img
            display block
            width: 100%
        .desc
          padding: 0.1rem 0.2rem 0.14rem
          .name
            overflow: hidden
            text-overflow: ellipsis
            display: -webkit-box
            -webkit-line-clamp: 2
            -webkit-box-orient: vertical
          .price
            margin-top 0.08rem
            .new
              color: #f23030
            .old
              text-decoration line-through
              margin-left: 0.3rem
      .noBg
        background-color: #f0f0f0 !important
      .split
        width: 0.1rem