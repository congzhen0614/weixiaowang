.activity-list
	width 100%
	.list-item
		position relative
		padding 0.2rem
		&.dis-flex
			display flex
		.activity-media
			width 100%
			> img
				width 100%
		.activity-name
			margin-top 0.2rem
			font-size 0.34rem
			line-height 0.5rem
			color #262626
			overflow: hidden
			text-overflow: ellipsis
			display -webkit-box
			-webkit-box-orient vertical
			-webkit-line-clamp 2
		.activity-bottom
			margin-top 0.2rem
			font-size 0
			line-height 0.3rem
			> span
				font-size 0.24rem
				color #999