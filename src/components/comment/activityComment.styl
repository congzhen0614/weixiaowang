.activity-comment
  header
    padding 0.14rem 0.26rem
    background-color #FCFAF8
    > img
      width 0.6rem
      height 0.6rem
    > span
      font-size 0.34rem
      color #F8BD48
      float right
  section
    .comment-content
      position relative
      padding 0.4rem 0.4rem
      > textarea
        border 1px dashed #C7C7CC
        border-radius 0.1rem
        width 100%
        height 3.7rem
        padding 0.3rem
        font-size 0.34rem
        color #C7C7CC
        outline none
      > p
        position absolute
        bottom 0.7rem
        right 0.7rem
        > span
          vertical-align baseline
        .overflow
          color #FF6060
    .pic-list
      padding 0.4rem
      display flex
      flex-wrap wrap
      font-size 0
      .pic-item
        display inline-block
        width 1.2rem
        height 1.2rem
        line-height 1.2rem
        margin-right 0.2rem
        position relative
        text-align center
        > .pic
          display inline-block
          max-width 100%
          max-height 100%
          vertical-align middle
        .close-icon
          position absolute
          top 0.04rem
          right 0.04rem
          display inline-block
          width 0.3rem
          height 0.3rem
