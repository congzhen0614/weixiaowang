.mall-list
	width 100%
	.mall-item
		padding 0.2rem
		.mall-media
			width 100%
			> img
				width 100%
		.mall-name
			margin-top 0.2rem
			font-size 0.34rem
			line-height 0.5rem
			color #262626
			overflow: hidden
			text-overflow: ellipsis
			display -webkit-box
			-webkit-box-orient vertical
			-webkit-line-clamp 2
		.mall-bottom
			margin-top 0.5rem
			font-size 0
			line-height 0.24rem
			position relative
			> img
				width 0.24rem
				height 0.24rem
				vertical-align middle
			> span
				font-size 0.24rem
				color #999
				&.size
					margin-left 0.1rem
				&.price
					margin-left 0.4rem
				&.group
					display inline-block
					margin-left 0.1rem
					font-size 0.2rem
					line-height 0.2rem
					color #fff
					padding 0.04rem
					background #ff6060
					border-radius 0.06rem
			> button
				display inline-block
				outline none
				background #f8bd48
				border-color #f8bd48
				font-size 0.24rem
				line-height 0.24rem
				color #fff
				padding 0.16rem
				border-radius 0.06rem
				font-weight 400
				position absolute
				right 0
				bottom 0