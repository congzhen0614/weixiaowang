.index	
	.footer
		display flex
		position fixed
		width 100%
		bottom 0
		height 1.04rem
		background #ffffff
		box-shadow 0px -4px 10px 0px rgba(0, 0, 0, 0.1)
		z-index 20
		> div
			flex 1
			text-align center
			position relative
			> .img
				display inline-block
				margin-top 0.12rem
				// width 0.5rem
				height 0.5rem
				width 0.44rem
				// height 0.44rem
			> p
				position absolute
				width 100%
				text-align center
				font-size 0.2rem
				line-height 0.2rem
				bottom 0.1rem
				&.active
					color #f8bd48
			&.home
				> .img
					background url('home.png') no-repeat center
					background-size 100%
					&.active
						background url('home_active.png') no-repeat center
						background-size 100%
			&.circle
				> .img
					background url('circle.png') no-repeat center
					background-size 100%
				> .icon
					position absolute
					width 0.9rem
					height 0.9rem
					padding 0.06rem
					top -0.2rem
					left 0.5rem
					border-radius 50%
					background-color #fff
					background-size 100%
					z-index 3
					box-shadow 0px -2px 10px 0px rgba(0, 0, 0, 0.1)
					text-align center
					> .inner
						background-color #f8bd48
						border-radius 50%
						width 100%
						height 100%
						line-height 0.78rem
						> img
							display inline-block
							width 0.42rem
							height 0.42rem
							vertical-align middle
			&.shopcat
				> .img
					background url('shopcat.png') no-repeat center
					background-size 100%
					&.active
						background url('shopcat_active.png') no-repeat center
						background-size 100%
			&.mine
				> .img
					background url('mine.png') no-repeat center
					background-size 100%
					&.active
						background url('mine_active.png') no-repeat center
						background-size 100%