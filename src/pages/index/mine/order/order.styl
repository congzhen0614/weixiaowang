.mine-order
	width 100%
	padding-bottom 0.3rem
	background #ffffff
	> .title
		margin-left 0.3rem
		padding 0.2rem 0
		font-size 0.3rem
		line-height 0.3rem
		color #333
		font-weight 600
		border-bottom 0.01rem solid #e6e6e6
	> .order-list
		margin-top 0.3rem
		width 100%
		display flex
		> .list-item
			flex 1
			text-align center
			font-size 0
			> img
				display inline-block
				width 1.12rem
				height 1.12rem
			> p
				margin-top 0.2rem
				font-size 0.26rem
				line-height 0.32rem
				color #888
				font-family '.PingFang-SC-Regular'