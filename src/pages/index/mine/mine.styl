.mine-index-page
	width 100%
	// padding-top 0.88rem
	padding-bottom 2.2rem
	.header-title
		position fixed
		width 100%
		left 0
		top 0
		z-index 3
		font-size 0.34rem
		line-height 0.88rem
		color #523f1a
		text-align center
		background #fcfaf8
	.login-box
		margin-top 0.8rem
		text-align center
		> button
			display inline-block
			padding 0 0.5rem
			font-size 0.34rem
			line-height 0.8rem
			color #fff
			vertical-align middle
			background #f8bd48
			border-radius 0.1rem
			text-decoration none
			outline none
			-webkit-appearance button
			border none
	.top
		position fixed
		top 0
		left 0
		z-index 5
		width 100%
		padding 0 0.1rem
		height 0.88rem
		line-height 0.88rem
		background-color rgba(248, 189, 72, 0)
		> div
			padding 0 0.2rem
			display inline-block
			float right
			line-height 0.88rem
			> img
				display inline-block
				width 0.36rem
				height 0.36rem
				vertical-align middle
	.avatar
		position fixed
		top 44px
		left 50%
		z-index 8
		width 75px
		height 75px
		margin-left -37.5px
		overflow hidden
		> img
			border 2px solid rgba(255, 255, 255, 0.9)
			border-radius 50%
			display inline-block
			width 100%
			height 100%
	.header
		width 100%
		position relative
		background-color #f8bd48
		padding-top 0.88rem
		padding-bottom 0.8rem
		background-image url('./bg_left.png'), url('./bg_right.png')
		background-repeat no-repeat, no-repeat
		background-size 3.06rem 2.38rem, 1.66rem 3.12rem
		background-position 0.2rem 0.36rem, 100% 0.92rem
		.integral
			margin-top 2rem
			font-size 0
			line-height 0.24rem
			text-align center
			> img
				display inline-block
				width 0.24rem
				height 0.24rem
				vertical-align middle
			> .text
				margin-left 0.1rem
				font-size 0.24rem
				color #6e5627
				vertical-align middle
		.nick-name
			margin-top 0.3rem
			font-size 0.34rem
			line-height 0.34rem
			color #6e5727
			text-align center
			vertical-align middle
		.swiper-container
			margin 0.7rem auto 0
			width 100%
			position relative
			.swiper-wrapper
				width 50%
				position relative
				left 0
				top 0
				z-index 555
				// transform: translate3d(150px, 0px, 0px)
				> .swiper-slide
					width 100%
					// flex 1
					text-align center
					overflow hidden
					padding 0.3rem
					opacity 0.8
					width 100%
					height 100%
					// position absolute
					z-index 666
					// background #fff
					&.swiper-slide-active
						// left 3rem
						padding 0.1rem
						opacity 1
					&.swiper-slide-prev, &.swiper-slide-next
						padding 0.2rem
						opacity 0.9
					&.swiper-slide-prev
						> img
							margin-left -0.14rem
					&.swiper-slide-next
						> img
							margin-right -0.14rem
					> img
						display inline-block
						width 100% !important
						height 100% !important
						border 0.04rem solid rgba(255, 255, 255, 0.9)
						border-radius 50%
						vertical-align middle
	.main-info
		width 100%
		display flex
		height 1.04rem
		background #fff
		.nav-item
			flex 1
			font-size 0
			line-height 0
			text-align center
			> .number
				margin-top 0.2rem
				font-size 0.3rem
				line-height 1
				color #333
			> .text
				margin-top 0.1rem
				font-size 0.24rem
				line-height 1
				color #999
	.discount
		background #fff
		font-size 0
		line-height 0.88rem
		padding 0 0.3rem
		> img
			display inline-block
			width 0.48rem
			height 0.48rem
			vertical-align middle
		> .text
			margin-left 0.2rem
			font-size 0.3rem
			vertical-align middle
		> .right-arrow
			float right
			display inline-block
			width 0.16rem
			height 0.26rem
			line-height 0.88rem
			margin-top 0.32rem
			vertical-align bottom
	.manage
		display flex
		line-height 0.88rem
		background #fff
		> div
			flex 1
			font-size 0
			&:first-child
				border-right 0.01rem solid #e6e6e6
			> img
				margin-left 0.3rem
				display inline-block
				width 0.48rem
				height 0.48rem
				vertical-align middle
			.text
				margin-left 0.2rem
				font-size 0.3rem
				color #333
				vertical-align middle
				