.mine-content-row
	display flex
	flex-wrap wrap
	.content-col
		flex 0 0 25%
		max-width 25%
		text-align center
		line-height 0
		height 1.86rem
		border-right 0.01rem solid #e6e6e6
		border-bottom 0.01rem solid #e6e6e6
		&:nth-child(4n)
			border-right none
		> img
			margin-top 0.44rem
			display inline-block
			width 0.48rem
			height 0.48rem
		> .text
			margin-top 0.16rem
			font-size 0.26rem
			line-height 0.32rem
			color #888
			