.home-recommond
	display flex
	// width 100%
	height 1.2rem
	padding 0.2rem
	overflow hidden
	background #ffffff
	.left-part
		height 0.72rem
		padding-right 0.2rem
		border-right 0.01rem solid #d6d6d6
		> img
			width 0.72rem
			height 0.72rem
	.right-box
		width 0.1rem
	.right-part
		flex 1
		margin-left 0.2rem
		overflow hidden
		.recommond-swiper-container
			height 0.8rem
			// overflow hidden
			> .swiper-wrapper
				height 100%
				// overflow hidden
				.recommond-list
					// height 100%
					// overflow hidden
					.list-item
						line-height 0.32rem
						font-size 0
						margin-bottom 0.08rem
						display flex
						.title
							display inline-block
							font-size 0.24rem
							line-height 0.3rem
							vertical-align bottom
							color #666666
							padding 0 0.08rem 0.02rem
							border 0.01rem solid #979797
							border-radius 0.06rem
						.text
							flex 1
							display inline-block
							vertical-align bottom
							margin-left 0.12rem
							font-size 0.28rem
							line-height 0.32rem
							color #333333
							overflow hidden
							text-overflow ellipsis
							white-space nowrap