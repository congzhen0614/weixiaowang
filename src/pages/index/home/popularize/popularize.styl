.home-popularize
	width 100%
	// height 3.06rem
	.list
		width 100%
		display flex
		overflow hidden
		margin-top 0.16rem
		background #ffffff
		.list-item
			&:first-child
				border-right 0.01rem solid #e6e6e6
			flex 1
			font-size 0
			overflow hidden
			padding 0.2rem
			.title
				font-size 0.28rem
				line-height 0.28rem
				color #333333
				font-weight 600
			.sub-title
				margin-top 0.2rem
				font-size 0.24rem
				line-height 0.24rem
				color #9c9890
			.media
				margin-top 0.2rem
				width 100%
				display flex
				.img-box
					flex 1
					line-height 1.56rem
					height 1.56rem
					overflow hidden
					text-align center
					&:first-child
						margin-right 0.22rem
					> img
						max-width 100%
						max-height 100%
						min-width 50%
						min-height 50%
						margin 0 auto
						vertical-align middle
				.block
					width 0.22rem
			.media-imgs
				margin-top 0.4rem
				position relative
				margin-bottom 0.4rem
				width 100%
				.img-box
					position absolute
					left 0
					height 100%
					overflow hidden
					background #fff
					box-shadow 0 0.04rem 0.06rem 0 rgba(0, 0, 0, 0.35)
					> img
						display block
						// width 100%
				.top-box
					width 100%
					top 0
					z-index 4
				.middle-box
					left 0.1rem
					right 0.1rem
					top 0.1rem
					z-index 3
				.bottom-box
					z-index 2
					top 0.2rem
					left 0.2rem
					right 0.2rem
	.center
		padding 0.2rem
		font-size 0
		margin-top 0.16rem
		background #ffffff
		.title
			font-size 0.34rem
			line-height 0.34rem
			color #333333
			font-weight 600
		.sub-title
			margin-top 0.2rem
			font-size 0.24rem
			line-height 0.24rem
			color #9c9890
		.media-imgs
			margin-top 0.4rem
			position relative
			margin-bottom 0.8rem
			width 100%
			.img-box
				position absolute
				left 0
				height 100%
				overflow hidden
				box-shadow 0 0.04rem 0.08rem 0 rgba(0, 0, 0, 0.5)
				> img
					display block
					width 100%
			.top-box
				width 100%
				top 0
				z-index 4
			.middle-box
				left 0.2rem
				right 0.2rem
				top 0.2rem
				z-index 3
			.bottom-box
				z-index 2
				top 0.4rem
				left 0.4rem
				right 0.4rem
					