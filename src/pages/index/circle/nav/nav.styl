@import '../../../../common/stylus/mixin.styl'
.circle-index-nav
	position fixed
	width 100%
	top 0.88rem
	left 0
	line-height 0
	z-index 3
	display flex
	background #fff
	border-bottom 0.01rem solid #d6d6d6
	.nav-item
		flex 1
		padding 0.14rem 0
		text-align center
		position relative
		&:first-child
			.img
				background-image url('dynamic.png')
				&.active
					background-image url('dynamic_active.png')
		&:nth-child(2)
			.img
				background-image url('community.png')
				&.active
					background-image url('community_active.png')
		&:last-child
			.img
				background-image url('channel.png')
				&.active
					background-image url('channel_active.png')
		.img
			display inline-block
			width 0.4rem
			height 0.4rem
			background-size 100% 100%
			background-repeat no-repeat
		.text
			margin-top 0.08rem
			font-size 0.24rem
			line-height 0.24rem
			color #9c9890
			&.active
				color #f8bd48
		.bottom-bar
			position absolute
			bottom 0
			width 100%
			height 0.04rem
			background #f8bd48
			transition 0.3s all linear
			
		
			