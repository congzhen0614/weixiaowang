@import '../../../common/stylus/mixin.styl'
.search-result
	width 100%
	min-height 100%
	.underline
		border-1px(#d8d8d8)
	.result-bar
		padding 0.15rem 0.4rem 0.15rem 0.26rem
		background #fff
		line-height 0.58rem
		position fixed
		top 0
		left 0
		display flex
		border-1px(#d8d8d8)
		.back-icon
			margin-right 0.4rem
			line-height 0.58rem
			> img
				width 0.6rem
				height 0.6rem
				vertical-align top
		.input-area
			flex 1
			height 0.58rem
			line-height 0.58rem
			background #f8f7f6
			border-radius 0.1rem
			border-left 0.01rem solid #f8f7f6
			padding 0 0.2rem
			display flex
			> input
				flex 1
				font-size 0.26rem
				line-height inherit
				outline none
				color #333
				background #f8f7f6
				&::placeholder
					color #c6c6c6
			> img
				display inline-block
				width 0.28rem
				height 0.28rem
				margin-top 0.15rem
				margin-left 0.3rem
				vertical-align middle