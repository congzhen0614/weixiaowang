@import '../../common/stylus/mixin.styl'
.search-index-page, .search-home-page
	background #ffffff
	min-height 4rem
	paddding-top 0.58rem
	.bar
		position fixed
		width 100%
		top 0
		left 0
		right 0
		z-index 11
		// height 0.58rem
		.top
			padding 0.15rem 0.2rem
			background #f8bd48
			display flex
			line-height 0.58rem
			position relative
			.type-selector
				position absolute
				top 1rem
				left 0.2rem
				width 2.4rem
				background #fff
				border 0.01rem solid #d6d6d6
				border-radius 0.2rem
				z-index 9
				box-shadow 0 0 0.2rem 0 rgba(0, 0, 0, 0.2)
				.selector-list
					width 100%
					position relative
					&::before
						content ''
						position absolute
						top -0.13rem
						left 0.28rem
						width 0.26rem
						height 0.26rem
						background #ffffff
						border 0.01rem solid #d6d6d6
						border-bottom none
						border-right none
						transform rotate(45deg)
					.item
						text-align center
						font-size 0.3rem
						line-height 1rem
						color #333
						border-1px(#d6d6d6)
						&.active
							color #f8bd48
						&:last-child::after
							border none
		.select-box
			height 0.58rem
			line-height 0.58rem
			font-size 0
			background rgba(248, 247, 246, 1)
			border-radius 0.1rem 0 0 0.1rem
			.text
				display inline-block
				margin-left 0.14rem
				font-size 0.28rem
				font-family PingFangSC-Regular
				color #333333
				vertical-align middle
			.bottom-arrow
				display inline-block
				margin-right 0.16rem
				margin-left 0.1rem
				width 0.17rem
				height 0.17rem
				border 0.04rem solid #f8bd48
				border-top none
				border-left none
				vertical-align middle
				margin-top -0.085rem
				transform rotate(45deg)
			@media only screen and (max-width: 320px)
				.bottom-arrow
					margin-right 0.02rem
		.input-area
			flex 1
			height 0.58rem
			line-height 0.58rem
			background #ffffff
			border-radius 0 0.1rem 0.1rem 0
			border-left 0.01rem solid #f8f7f6
			padding 0 0.2rem
			display flex
			> input
				flex 1
				font-size 0.26rem
				line-height inherit
				outline none
				color #333
				&::placeholder
					color #c6c6c6
			> img
				display inline-block
				width 0.28rem
				height 0.28rem
				margin-top 0.15rem
				margin-left 0.3rem
				vertical-align middle
		.clear-button
			min-width 0.68rem
			margin-left 0.3rem
			line-height 0.58rem
			font-size 0.34rem
			color #523f1a
	.search-block
		margin-top 0.8rem
		padding 0 0.32rem
		position relative
		> .title
			font-size 0
			line-height 0.36rem
			> img
				width 0.28rem
				height 0.36rem
				vertical-align middle
			> .text
				margin-left 0.12rem
				font-size 0.36rem
				color #999
				vertical-align middle
		.search-body
			margin-top 0.4rem
			max-height 3.5rem
			overflow hidden
			.swiper-wrapper 
				width: 100%
				height: 100%
			.swiper-pagination-bullets
				bottom -0.6rem
			.swiper-pagination-bullet
				width: 0.12rem
				height: 0.12rem
				display: inline-block
				background: #ffffff
				border 0.01rem solid #a6a6a6
				&.swiper-pagination-bullet-active
					background #a6a6a6
					border none
			.line-box
				font-size 0
				margin-top 0.1rem
				width 100%
				height 0.6rem
				overflow hidden
				> .text
					display inline-block
					margin-right 0.1rem
					padding 0.1rem 0.2rem
					font-size 0.28rem
					line-height 0.4rem
					color #333
					background #f8f7f6
					border-radius 0.3rem
					max-width 100%
					overflow hidden
					text-overflow ellipsis
					white-space nowrap
		.no-data-box
			width 100%
			margin-top 1rem
			text-align center
			> img
				display inline-block
				width 2rem
				height 2rem
				margin 0 auto
	.hot-search
		margin-top 1.28rem
	.clear-history-search
		width 100%
		margin-top 1rem
		text-align center
		> span
			margin 0 auto
			padding 0.2rem 0.46rem
			border 0.01rem solid #999
			display inline-block
			font-size 0.28rem
			line-height 0.34rem
			color #666
			border-radius 0.4rem
				
		