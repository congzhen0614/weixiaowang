.active-hot-page
  .interval
    height 8px
    background-color: #F3F4F5
  .title
    width 100%
    height 40px
    line-height 40px
    padding 0px 10px
    border-bottom 1px solid #E6E6E6
    > span
      font-size 0.26rem
      line-height 0.26rem
      color: #F8BD48
    > span:before
      content: ''
      display inline-block
      width 0.26rem
      height 0.26rem
      margin-right 5px
      background-image: url(./hot.png)
      background-repeat no-repeat
      background-size 100%
      vertical-align middle
  .content
    overflow hidden
    > li:last-child
      border none
    > li
      position relative
      padding: 0.3rem 0.2rem
      padding-left 0px
      margin-left 0.2rem
      overflow hidden
      border-bottom 1px solid #E6E6E6
      min-height 2.75rem
      .content-right
        width 50%
        float right
        padding-left 0.1rem
        .content-title
          font-size 0.3rem
          color #333
          overflow hidden
          white-space nowrap
          text-overflow ellipsis
          //font-weight 600
        .content-date
          font-size 0.26rem
          color #999
          margin-top 0.1rem
        .content-price
          font-size 0.2rem
          color #F8BD48
          margin-top 0.1rem
          .priceInt
            font-size 0.3rem
            vertical-align baseline
        .content-bottom
          position absolute
          bottom 0.4rem
          > span
            display inline-block
            font-size 0.24rem
            padding 0px 0.08rem
            margin-top 0.1rem
          .ticket
            border 1px solid #5998E2
            color #5998E2
          .tour
            border 1px solid #CF76DA
            color: #CF76DA
          .reduce
            background-color #FF6060
            color #FFFFFF
      .content-left
        width 50%
        float left
        padding-right 0.1rem
        position relative
        > img
          width 100%
        > span
          position absolute
          display block
          //width 1.06rem
          height 0.4rem
          line-height 0.4rem
          padding 0px 0.08rem
          font-size 0.24rem
          background-color rgba(0, 0, 0, 0.5)
          border-radius 0.4rem
          color #FFF9AB
          left 0.2rem
          bottom: 0.2rem

