.edit-userinfo
  header
    background-color #FCFAF8
    padding 0.14rem 0.26rem
    img
      width 0.6rem
      height 0.6rem
      float left
    span
      display block
      height 0.6rem
      line-height 0.6rem
      font-size 0.34rem
      color #F8BD48
      float right
    p
      height 0.6rem
      line-height 0.6rem
      font-size 0.34rem
      color #523F1A
      text-align center
  section
    .head-portrait
      padding 0.8rem 0
      img
        display block
        width 1.2rem
        height 1.2rem
        margin 0 auto
      p
        font-size 0.26rem
        color #C7C7CC
        text-align center
        margin-top 0.2rem
    .kids-info
      li
        padding 0.4rem 0.32rem
        border-bottom 1px solid #E6E6E6
        span
          font-size 0.3rem
          color #333333
        input
          font-size 0.3rem
          float right
          width 70%
          text-align right
          outline none
        > img
          display block
          width 0.16rem
          height 0.26rem
          float right
          margin-top 0.1rem
          margin-left 0.32rem
        .gender:last-child
          margin-right 0.92rem
        .gender
          float right
          > img
            display block
            width 0.44rem
            height 0.44rem
            float left
            margin-right 0.52rem
          p
            float left
            font-size 0.5rem
            color #523F1A
            span
              display block
              float left
            img
              display block
              width 0.4rem
              height 0.4rem
              float left
              margin-right 0.1rem
