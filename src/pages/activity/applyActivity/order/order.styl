.activity-order
  background-color #F3F4F5
  header
    position fixed
    top 0
    left 0
    width 100%
    background-color #FCFAF8
    padding 0.14rem 0.26rem
    img
      width 0.6rem
      height 0.6rem
      float left
    p
      height 0.6rem
      line-height 0.6rem
      font-size 0.34rem
      color #523F1A
      text-align center
      margin-left -0.86rem
  section
    margin-top 0.88rem
    margin-bottom 1.2rem
    .activity-info
      padding 0.3rem 0.2rem
      background-color #fff
      margin-bottom 0.2rem
    .activity-img
      width 50%
      height 2.52rem
      padding-right 0.1rem
      img
        width 100%
        height 100%
    .activity-msg
      width 50%
      float right
      padding-left 0.1rem
      > p
        margin-bottom 0.1rem
      .activity-title
        font-size 0.3rem
        color #333333
        // white-space nowrap
        // overflow hidden
        // text-overflow ellipsis
      .activity-time
        font-size 0.26rem
        color #999999
      .activity-fee
        font-size 0.2rem
        color #F8BD48
        > span
          font-size 0.3rem
          vertical-align baseline
      .sale-type
        font-size 0.2rem
        > span
          padding 0 0.1rem
        .ticket
          color #5998E2
          border 1px solid #5998E2
        .group
          color #CF76DA
          border 1px solid #CF76DA
    .activity-info
      background-color #fff
    .ticket-info
      background-color #fff
      overflow hidden
      margin-bottom 0.2rem
      .info-left
        width 11.2%
        padding-top 0.3rem
        float left
        .info-icon
          display block
          width 0.32rem
          height 0.32rem
          margin-left 0.32rem
      .info-right
        float right
        width 88.8%
        li
          height 0.92rem
          line-height 0.92rem
          border-bottom 1px solid #E6E6E6
          font-size 0.3rem
          color #787570
          > p
            width 70%
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
            float left
          > span
            float right
            color #F8BD48
            margin-right 0.32rem
          .price
            font-size 0.2rem
            color #FF6060
            > span
              font-size 0.34rem
              vertical-align baseline
        .ticket-title
          color #6E5627
        li:last-child
          border none
        .ticket-coupon
          color #FF6060
          img
            width 0.16rem
            height 0.26rem
            float right
            margin-right 0.32rem
            margin-top 0.33rem
          span
            color #C7C7CC
    .detail-fee
      padding 0.2rem 0.32rem
      background-color #fff
      li
        font-size 0.3rem
        color #9A968D
        overflow hidden
        height 0.54rem
        line-height 0.54rem
        p
          float right
          color #6E5627
          font-size 0.2rem
          > span
            font-size 0.3rem
            vertical-align baseline
  footer
    .footer
      position fixed
      width 100%
      bottom 0
      left 0
      background-color #fff
      box-shadow 0rem -0.04rem 0.1rem 0rem rgba(0, 0, 0, 0.1)
      .submit-order
        width 2.5rem
        height 1rem
        background linear-gradient(45deg, #FF5050, #FE7A56)
        line-height 1rem
        text-align center
        float right
        font-size 0.34rem
        color #fff
      .total-fee
        overflow hidden
        margin-top 0.1rem
        margin-left 0.32rem
        > p
          float left
          font-size 0.2rem
          color #6E5627
          vertical-align bottom
          > span
            color #F8BD48
            .big
              font-size 0.48rem
              vertical-align baseline

