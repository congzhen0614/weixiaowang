.activity-fill-userinfo
  header
    background-color #FCFAF8
    padding 0.14rem 0.26rem
    img
      width 0.6rem
      height 0.6rem
      float left
    p
      height 0.6rem
      line-height 0.6rem
      font-size 0.34rem
      color #523F1A
      text-align center
      margin-left -0.86rem
  section
    padding 0.64rem 0.32rem
    .user-message
      border-radius 0.1rem
      box-shadow 0rem 0rem 0.08rem 0rem rgba(62,54,38,0.25)
      > p
        font-size 0.3rem
        color #6E5627
        padding 0.44rem 0.3rem
        overflow hidden
        > span
          display block
          float left
          width 30%
          height 0.44rem
          line-height 0.44rem
        > input
          display block
          text-align right
          float right
          width 70%
          height 0.44rem
          line-height 0.44rem
          outline none
      .order-username
        border-bottom 1px solid #E6E6E6
  footer
    position fixed
    bottom 0
    left 0
    width 100%
    div
      width 100%
      height 1rem
      line-height 1rem
      text-align center
      color #fff
      background linear-gradient(45deg, #FF5050, #FE7A56)
      font-size 0.34rem
