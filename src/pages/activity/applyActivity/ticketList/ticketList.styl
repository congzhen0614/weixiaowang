.activity-ticket-list
  header
    position fixed
    top 0
    left 0
    width 100%
    padding 0.14rem 0.26rem
    overflow hidden
    background-color #FCFAF8
    z-index 3
    img
      width 0.6rem
      height 0.6rem
      float left
    p
      width 100%
      height 0.6rem
      line-height 0.6rem
      text-align center
      margin-left -0.88rem
      font-size 0.34rem
      color #523F1A
  section
    margin-top 0.88rem
    padding 0.4rem
    .ticket-list
      margin-bottom 0.4rem
      box-shadow 0px 0px 4px 0px rgba(62,54,38,0.25)
      .ticket-top
        padding 0.3rem
        background-color #FCC251
        border-top-left-radius 0.1rem
        border-top-right-radius 0.1rem
        background-image url("./round-icon.png")
        background-repeat repeat-x
        background-size 0.2rem
        background-position bottom left
        margin-bottom -0.1rem
        .ticket-title
          font-size 0.3rem
          color #94712C
          margin-bottom 0.2rem
        .ticket-content
          font-size 0.2rem
          color #94712C
          margin-bottom 0.2rem
        .ticket-total
          overflow hidden
          .ticket-price
            float right
            font-size 0.2rem
            color #FFFDE6
            > span
              font-size 0.48rem
              vertical-align baseline
          .ticket-number
            margin-top 0.2rem
            font-size 0.3rem
            color #94712C
      .ticket-bottom
        height 0.8rem
        line-height 0.8rem
        color #AC8338
        font-size 0.26rem
        padding 0 0.3rem
        border-bottom-left-radius 0.1rem
        border-bottom-right-radius 0.1rem
        background-color #FFFCF5
