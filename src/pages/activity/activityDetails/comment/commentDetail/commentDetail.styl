.activity-comment-detail
  header
    position fixed
    width 100%
    top 0
    left 0
    background-color #FCFAF8
    padding 0.14rem 0.26rem
    img
      width 0.6rem
      height 0.6rem
      float left
    p
      height 0.6rem
      line-height 0.6rem
      font-size 0.34rem
      color #523F1A
      text-align center
      margin-left -0.86rem
    .more-icon
      display block
      width 0.4rem
      height 0.4rem
      float right
      background-image url("more_icon.png")
      background-size 100%
      background-repeat no-repeat
      margin-top 0.1rem
  .comment-content
    margin-top 0.88rem
    margin-bottom 1rem
    .comment-title
      width 100%
      padding 0.3rem
      .observer
        .observer-avatar
          display block
          width 0.52rem
          height 0.52rem
          margin-right 0.1rem
          float left
          border-radius 50%
        .observer-name
          height 0.52rem
          line-height 0.52rem
          font-size 0.26rem
          color #9C9890
      .zan
        float right
        height 0.26rem
        line-height 0.26rem
        font-size 0.24rem
        color #999999
        margin-top 0.1rem
        .zan-icon
          display block
          width 0.24rem
          height 0.24rem
          float left
          margin-right 0.1rem
          margin-top 0.01rem
    .comment-detail
      padding 0 0.3rem
      > p
        font-size 0.34rem
        color #333333
      > img
        display block
        width 100%
        margin-top 0.16rem
      .comment-icons
        overflow hidden
        padding 0.4rem 0.3rem
        > p
          float left
          margin-right 0.4rem
          font-size 0.24rem
          color #9C9890
          height 0.36rem
          line-height 0.36rem
          > span
            display block
            width 0.24rem
            height 0.24rem
            background-size 100%
            float left
            margin-top 0.06rem
            margin-right 0.1rem
          .location-icon
            width 0.2rem
            background-image url("./location-icon.png")
          .time-icon
            background-image url("./time-icon.png")
    .zan-list
      background-color #F8F7F6
      height 1.2rem
      line-height 1.2rem
      > ul
        width 70%
        padding-left 0.1rem
        > li
          width 1rem
          height 1.2rem
          padding 0.2rem
          padding-right 0
          float left
          > img
            display block
            width 100%
            height 100%
            border-radius 50%
      > p
        width 30%
        float right
        text-align right
        color #523F1A
        > span
          display block
          width 0.16rem
          height 0.26rem
          background-image url("./right_arrow.png")
          background-size 100%
          background-repeat no-repeat
          float right
          margin-right 0.3rem
          margin-top 0.47rem
          margin-left 0.1rem
    .comment-list
      li
        padding 0 0.2rem
        overflow hidden
        border-bottom 1px solid #E6E6E6
        padding-top 0.4rem
        .user-message
          height 0.52rem
          line-height 0.52rem
          .right-icon
            position relative
            float right
            .zan-icon
              position absolute
              display block
              top 50%
              left -0.34rem
              float left
              width 0.24rem
              height 0.24rem
              margin-top -0.12rem
          > img
            width 0.52rem
            height 0.52rem
            border-radius 50%
            margin-right 0.2rem
            float left
          > p
            height 0.52rem
            line-height 0.52rem
            font-size 0.26rem
            color #9C9890
        .user-comment
          margin-left 0.72rem
          > p
            padding 0.34rem 0
            font-size 0.34rem
            color #333
          > img
            width 1.2rem
            height 1.2rem
            border-radius 2px
            float left
            margin-right 0.1rem
          > div
            clear both
            overflow hidden
            padding 0.3rem 0
            .button-icon
              float left
              margin-right 0.4rem
              font-size 0.24rem
              height 0.24rem
              line-height 0.24rem
              > span
                display block
                width 0.24rem
                height 0.24rem
                background-repeat no-repeat
                background-size 100%
                float left
                margin-right 0.1rem
              .location-icon
                width 0.2rem
                background-image url("./location-icon.png")
              .time-icon
                background-image url("./time-icon.png")
              .comment-icon
                background-image url("./comment.png")
              .delete-icon
                background-image url("./delete-icon.png")
              > p
                font-size 0.24rem
                color #9C9890
                width 20px
      li:last-child
        border-bottom none
  footer
    .add-comment
      padding 0.14rem 0.2rem
      position fixed
      bottom 0
      left 0
      width 100%
      height 1rem
      background-color #fff
      box-shadow 0 1px 1px 2px rgba(0, 0, 0, 0.1)
      .comment-input
        width 100%
        height 100%
        padding 0.1rem
        border-radius 0.1rem
        border 1px solid #C7C7CC
        background-color #FCFAF8
        > span
          font-size 0.3rem
          color #C7C7CC
        > img
          float right
          width 0.38rem
          height 0.38rem
          margin-top 2px
