.activity-details-title
  padding 0 0.2rem
  .title
    padding-top 0.2rem
    > h2
      font-size 0.4rem
      color #523F1A
      line-height 0.6rem
      .hot-icon
        display block
        width 0.4rem
        height 0.4rem
        background-image url("./hot-icon.png")
        background-size 100%
        background-repeat no-repeat
        float left
        margin-top 0.1rem
        margin-right 0.2rem
  .describe
    .describe-top
      padding 0.22rem 0
      .star-icon
        float right
        > img
          width 0.3rem
          height 0.3rem
          margin-right 0.1rem
      .location
        > p
          font-size 0.3rem
          color #BEBBB5
          .location-icon
            display block
            width 0.16rem
            height 0.2rem
            background-image url("location-icon.png")
            background-size 100%
            background-repeat no-repeat
            float left
            margin-top 0.1rem
            margin-right 0.1rem
    .describe-con
      > p
        font-size 0.26rem
        color #787570
  .describe-price
    padding 0.4rem 0
    .describe-price-right
      float right
      > span
        display inline-block
        font-size 0.24rem
        padding 0px 0.08rem
        margin-top 0.1rem
      .ticket
        border 1px solid #5998E2
        color #5998E2
      .tour
        border 1px solid #CF76DA
        color: #CF76DA
      .reduce
        background-color #FF6060
        color #FFFFFF
    > p
      font-size 0.3rem
      color #F8BD48
      .bigger
        font-size 0.4rem
        vertical-align baseline
  .apply-cut-off
    border-top 1px solid #f6f6f6
    height 1rem
    line-height 1rem
    > p
      font-size 0.24rem
      color #999999
      .cut-icon
        display block
        width 0.24rem
        height 0.24rem
        background-image url("./clock-icon.png")
        background-size 100%
        background-repeat no-repeat
        float left
        margin-top 0.35rem
        margin-right 0.1rem
    .cut-time
      float right
      > span
        display inline-block
        width 0.44rem
        height 0.44rem
        background-color #EDB33F
        border-radius 0.1rem
        line-height 0.44rem
        text-align center
        color #fff
        margin-right 0.1rem
        margin-top -4px
