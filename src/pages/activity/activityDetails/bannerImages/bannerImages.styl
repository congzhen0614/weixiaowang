.aitivity-banner-images
  header
    position fixed
    top 0
    left 0
    width 100%
    padding 0.14rem 0.26rem
    overflow hidden
    background-color #FCFAF8
    z-index 3
    img
      width 0.6rem
      height 0.6rem
      float left
  section
    margin-top 0.88rem
    overflow hidden
    .images-list
      width 50%
      float left
      padding 0.2rem
      > li
        width 100%
        margin-bottom 0.2rem
        > img
          width 100%
    .list-left
      float left
      padding-right 0.1rem
    .list-right
      float right
      padding-left 0.1rem
  .show-images
    position fixed
    z-index 4
    top 0
    left 0
    width 100%
    height 100%
    background-color #000
    .images-close
      display block
      width 0.6rem
      height 0.6rem
      margin-top 0.54rem
      margin-left 0.26rem
    .images-show
      position absolute
      top 50%
      left 0
      width 100%
