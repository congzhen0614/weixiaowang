@import "../../../common/stylus/mixin.styl"
.recommend
  padding: 0 0.2rem
  .title
    width 72%
    display flex
    margin 0.8rem auto
    .line
      flex: 1
      position relative
      top -0.1rem
      border-bottom 1px dashed #a0a0a0
    .text
      padding 0 0.2rem
      font-size 0.24rem
      line-height 0.24rem
      font-weight 700px
      color: #999
  .book-list
    display flex
    // background #f0f0f0
    padding-bottom 1rem
    .side-list
      flex 1
      &:first-child
        margin-right 0.1rem
      .item
        margin-bottom 0.1rem
        padding 0.2rem 0.2rem 0.3rem
        box-shadow 0 0 0.1rem 0 rgba(0, 0, 0, 0.15)
        .img
          width: 100%
          // margin-top 0.2rem
          > img
            display block
            width: 100%
        .name
          margin-top 0.2rem
          font-size 0.28rem
          line-height 0.34rem
          color #333
          overflow: hidden
          text-overflow: ellipsis
          display: -webkit-box
          -webkit-line-clamp: 2
          -webkit-box-orient: vertical
        .price
          margin-top 0.2rem
          font-size 0
          .new
            font-size 0.24rem
            line-height 0.34rem
            color: #757575
            > .big
              font-size 0.34rem
              color #262626
              vertical-align baseline
          .old
            margin-left: 0.4rem
            font-size 0.28rem
            line-height 0.28rem
            color #c7c7cc
            text-decoration line-through
        .cart
          margin-top 0.3rem
          text-align right
          > span
            display inline-block
            font-size 0.24rem
            line-height 0.24rem
            color #333
            padding 0.08rem 0.2rem
            background #f0f0f0
            border-radius 0.2rem
            &:first-child
              margin-right 0.2rem
