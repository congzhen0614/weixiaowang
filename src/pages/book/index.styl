.book-index-page
	width 100%
	.wrapper
		margin-top 1.1rem
		// margin-top 2.2rem
		.swiper-container .swiper-wrapper .swiper-slide
			background-size cover
	.type-row
		display flex
		flex-wrap wrap
		.type-col
			flex 0 0 25%
			max-width 25%
			-webkit-box-flex 0
			text-align center
			font-size 0.26rem
			line-height 0.26rem
			color #6e5627
			margin-top 0.6rem
			&:last-child
				color #f8bd48
	.recommend-list
		width 100%
		.list-item
			padding 0 0.32rem
			overflow hidden
			.top
				width 100%
				margin-top 1rem
				position relative
				line-height 0.48rem
				.title
					text-align center
					margin 0 auto
					position relative
					font-size 0
					&.discount-title
						width 2.3rem
						height 0.48rem
					> img
						display inline-block
						margin-right 0.1rem
						width 0.36rem
						height 0.36rem
					.new-name
						font-size 0.3rem
						line-height 0.3rem
						color #f8bd48
						vertical-align middle
					.top-line
						display block
						width 90%
						height 0.24rem
						border-radius 0.1rem
						position absolute
						top 0
						left 0
						background #f8bd48
						z-index 1
					.bottom-line
						display block
						width 90%
						height 0.24rem
						border-radius 0.1rem
						position absolute
						right 0
						bottom 0
						background #f8bd48
						z-index 1
					.special-name
						position absolute
						z-index 3
						left 0.56rem
						top 0
						font-size 0.3rem
						line-height 0.48rem
						color #fff
					.name
						font-size 0.3rem
						line-height 0.3rem
						color #6e5627
						font-weight 700
				.more
					position absolute
					bottom 0
					right 0
					font-size 0
					> img
						display inline-block
						margin-left 0.1rem
						width 0.28rem
						height 0.28rem
						vertical-align middle
					> span
						display inline-block
						font-size 0.26rem
						color #c7c7cc
						vertical-align middle
			.recommend-row
				margin-top 0.6rem
				width 100%
				display flex
				.recommend-col
					flex 1
					max-width 25%
					// min-width 25%
					-webkit-box-flex 0
					padding-right 0.1rem
					&:last-child
						// margin-right 0
					.img
						position relative
						text-align center
						width 100%
						> img
							display inline-block
							max-width 100%
							max-height 100%
						.bottom
							position absolute
							bottom 0
							right 0
							padding 0.1rem 0.1rem 0.04rem 0.1rem
							font-size 0
							background rgba(251, 90, 90, 0.9)
							border-radius 0.04rem
							> .text
								font-size 0.2rem
								color #fff
								line-height 0.3rem
								> .big
									font-size 0.3rem
									vertical-align baseline
					.name
						width 100%
						margin-top 0.2rem
						font-size 0.26rem
						line-height 0.26rem
						color #6e5627
						text-align center
						overflow hidden
						text-overflow ellipsis
						white-space nowrap
				
			