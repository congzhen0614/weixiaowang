.book-detail-header
	position fixed
	width 100%
	left 0
	top 0
	display flex
	line-height 0.58rem
	padding-top 0.15rem
	padding-bottom 0.15rem
	padding-right 0.3rem
	padding-left 0.26rem
	z-index 1
	border-bottom 0.01rem solid #d6d6d6
	background #fff
	.title
		line-height inherit
		padding 0 0.2rem
		flex 1
		font-size 0.34rem
		color #523f1a
		text-align center
		.top-tab
			width 3.2rem
			margin 0 auto
			display flex
			.tab-item
				flex 1
				font-size 0.26rem
				color #999
				&.active
					font-size 0.3rem
					color #f8bd48
	.back-icon
		font-size 0
		margin-right 0.36rem
		line-height inherit
		> img
			width 0.6rem
			height 0.6rem
			vertical-align middle
	.share, .more
		line-height inherit
		margin-left 0.4rem
		> img
			width 0.4rem
			height 0.4rem
			display inline-block
			vertical-align middle
	.share
		position absolute
		right 1.1rem
		top 0.15rem
	.more-box
		width 100%
		height 2.26rem
		position absolute
		left 0
		top 0.9rem
		background #fff
		z-index 2
		animation-duration 0.5s !important
		> ul
			display flex			
			text-align center
			margin-top 0.5rem
			li 
				flex 1
				width 100%
				height 1.28rem
				> img 
					width 0.8rem
					height 0.8rem
				> p 
					font-size 0.26rem
					color: #8D7A53
					font-family PingFangSC
		.more-area
			width 100%
	.mask
		position fixed
		width 100%
		height 100%
		top 0.9rem
		left 0
		background rgba(0, 0, 0, 0.5)
		opacity 1
		z-index 1
		visibility visible
		transition-duration 300ms
