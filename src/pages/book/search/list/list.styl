@import "../../../../common/stylus/mixin.styl"
.book_search_list
  width 100%
  // 今日优惠
  .book-list
    display flex
    padding: 0 0.2rem 1rem
    // background #f0f0f0
    .side-list
      flex 1
      &:first-child
        margin-right 0.1rem
      .item
        padding 0.2rem 0.2rem 0.3rem
        box-shadow 0 0 0.1rem 0 rgba(0, 0, 0, 0.15)
        .img
          width: 100%
          position relative
          > img
            display block
            width: 100%
          > span
            position absolute
            bottom 0
            right 0
            display inline-block
            text-align center
            font-size 0.28rem
            color #fffeb0
            line-height 1rem
            width 1rem
            height 1rem
            // background url('discount_bg.png') no-repeat
            background-size 100% 100%
        .name
          margin-top 0.2rem
          font-size 0.28rem
          line-height 0.34rem
          color #333
          overflow: hidden
          text-overflow: ellipsis
          display: -webkit-box
          -webkit-line-clamp: 3
          -webkit-box-orient: vertical
          // white-space nowrap
        // 其他信息
        .other
          margin-top 0.2rem
          font-size 0
          line-height 0.2rem
          &:last-child
            margin-top 0.1rem
          > .text-name
            font-size 0.2rem
            color #c7c7cc
            line-height 0.2rem
            vertical-align middle
          > .text
            margin-left 0.2rem
            font-size 0.2rem
            color #9c9890
            line-height 0.2rem
            vertical-align middle
        // 价格
        .price
          margin-top 0.2rem
          font-size 0
          .new
            font-size 0.24rem
            line-height 0.34rem
            color: #757575
            > .big
              font-size 0.34rem
              color #262626
              vertical-align baseline
          .old
            margin-left: 0.4rem
            font-size 0.28rem
            line-height 0.28rem
            color #c7c7cc
            text-decoration line-through
        .cart
          margin-top 0.3rem
          text-align right
          > span
            display inline-block
            font-size 0.24rem
            line-height 0.24rem
            color #333
            padding 0.08rem 0.2rem
            background #f0f0f0
            border-radius 0.2rem
            &:first-child
              margin-right 0.2rem
  // 最新上架
  .new-list
    width 100%
    .list-item
      display flex
      padding 0.2rem
      box-shadow 0 0.01rem 0 0 #e6e6e6
      .left-media
        width 2.4rem
        height 2.4rem
        line-height 2.4rem
        padding 0.1rem 0
        background-repeat no-repeat
        background-size 100%
        text-align center
        > img
          max-width 100%
          max-height 100%
          min-width 50%
          min-height 50%
          margin 0 auto
          vertical-align middle
      .right-part
        flex 1
        overflow hidden
        margin-left 0.2rem
        height 2.6rem
        display -webkit-box
        -webkit-box-orient horizontal
        -webkit-box-pack center
        -webkit-box-align center
        .box
          width 100%
          .name
            margin-top 0.2rem
            font-size 0.28rem
            line-height 0.34rem
            color #333
            overflow: hidden
            text-overflow: ellipsis
            display: -webkit-box
            -webkit-line-clamp: 1
            -webkit-box-orient: vertical
          // 其他信息
          .other
            margin-top 0.2rem
            font-size 0
            line-height 0.2rem
            &:last-child
              margin-top 0.1rem
            > .text-name
              display inline-block
              font-size 0.2rem
              color #c7c7cc
              line-height 0.2rem
              vertical-align middle
            > .text
              display inline-block
              margin-left 0.2rem
              font-size 0.2rem
              color #9c9890
              line-height 0.22rem
              vertical-align top
              max-width 80%
              overflow hidden
              text-overflow ellipsis
              white-space nowrap
          .time
            margin-top 0.2rem
            font-size 0.28rem
            line-height 0.28rem
            color #f8bf48
          // 价格
          .price
            margin-top 0.2rem
            font-size 0
            .new
              font-size 0.24rem
              line-height 0.34rem
              color: #757575
              > .big
                font-size 0.34rem
                color #262626
                vertical-align baseline
            .old
              margin-left: 0.4rem
              font-size 0.28rem
              line-height 0.28rem
              color #c7c7cc
              text-decoration line-through