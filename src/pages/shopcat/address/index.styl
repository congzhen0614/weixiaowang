.mine-address-index
	padding-top 0.88rem
	background-color #fff
	.mine-address-index-top
		position fixed
		width 100%
		left 0
		top 0
		z-index 3
		line-height 0.88rem
		height 0.88rem
		background-color #fff
		&.underline
			border-bottom 0.01rem solid #d6d6d6
		> .back-icon
			position absolute
			left 0.26rem
			top 0
			line-height 0.88rem
			> img
				display inline-block
				width 0.6rem
				height 0.6rem
				vertical-align middle
		.title
			width 100%
			font-size 0.34rem
			color #523f1a
			text-align center
			vertical-align middle
		.add-btn
			position absolute
			right 0.1rem
			top 0
			font-size 0.34rem
			line-height 0.88rem
			color #f8bd48
			padding 0 0.2rem
	.input-list
		width 100%
		padding 0 0.4rem
		margin-top 0.4rem
		.input-item
			margin-top 0.4rem
			.header
				width 100%
				height 2rem
				background #fffde0
				background-image url('left_top_bg.png'), url('right_top_bg.png'), url('left_bottom_bg.png'), url('right_bottom_bg.png'), url('horizontal_bg.png'), url('horizontal_bg.png'), url('vertical_bg.png'), url('vertical_bg.png')
				background-position 0 0, 100% 0, 0 100%, 100% 100%, 0.52rem 0, 0.52rem 100%, 0 0.54rem, 100% 0.54rem
				background-repeat no-repeat, no-repeat, no-repeat, no-repeat, repeat-x, repeat-x, repeat-y, repeat-y
				background-size 0.52rem 0.52rem, 0.46rem 0.53rem, 0.52rem 0.44rem, 0.46rem 0.44rem, 1.04rem 0.14rem, 1.04rem 0.14rem, 0.12rem 1.03rem, 0.12rem 1.03rem
				.main
					height 1.76rem
					line-height 1.76rem
					position relative
					display flex
					overflow hidden
					.left-part
						flex 1
						overflow hidden
						padding-left 0.4rem
						height 2rem
						line-height 2rem
						display -webkit-box
						-webkit-box-orient horizontal
						-webkit-box-align center
						-webkit-box-pack center
						.box
							width 100%
							.contract
								display flex
								width 100%
								font-size 0.34rem
								line-height 0.34rem
								.name
									display inline-block
									flex 1
								.mobile
									display inline-block
									text-align right
							.address
								margin-top 0.2rem
								width 100%
								font-size 0.26rem
								line-height 0.34rem
								color #84836d
								overflow hidden
								text-overflow ellipsis
								display -webkit-box
								-webkit-box-orient vertical
								-webkit-line-clamp 2
					.right-arrow
						padding 0 0.4rem
						> img
							display inline-block
							width 0.16rem
							height 0.26rem
							margin-top 0rem
							vertical-align middle
				