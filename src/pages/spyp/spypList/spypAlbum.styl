.spyp-album
  background-color #F3F4F5
  .spyp-album-head
    margin-bottom 0.1rem
    background-color #ffffff
    .spyp-album-detail
      position relative
      padding 0.5rem 0.3rem
      .spyp-album-detail-left
        position absolute
        width 2rem
        border-radius 3px
        border 4px solid rgba(255,255,255,1)
        box-shadow 0px 0px 5px 0px rgba(0,0,0,0.35)
        > img
          width 100%
      .spyp-album-detail-right
        margin-left 2.3rem
        .spyp-album-detail-title
          color #333333
          font-weight 500
          font-size 0.32rem
          line-height 0.44rem
          margin-bottom 0.2rem
        .spyp-album-detail-source
          margin-bottom 0.1rem
          > img
            width 0.4rem
            height 0.4rem
            border-radius 50%
            margin-right 0.1rem
          > span
            width 100%
            color #52504C
            font-size 0.24rem
            line-height 0.24rem
        .spyp-album-detail-number
          display flex
          flex-direction row
          > div
            margin-right 0.3rem
            margin-bottom 0.1rem
            > img
              width 0.2rem
              height 0.2rem
              vertical-align middle
            > span
              display inline-block
              vertical-align middle
              color #9C9890
              font-size 0.2rem
        .spyp-album-detail-price
          display flex
          > span
            display block
            height 0.64rem
            text-align center
            border-radius 0.64rem
            line-height 0.64rem
            font-size 0.28rem
            margin-right 0.2rem
          .price-free
            width 1.2rem
            color #999999
            border 1px solid #999999
          .price-buy
            width 2rem
            background-color #FF6060
            color #ffffff
          .price-hear
            width 1.2rem
            color #F8BD48
            border 1px solid #F8BD48
    .spyp-album-tag
      display flex
      justify-content flex-start
      padding-bottom 0.4rem
      > span
        display block
        height 0.5rem
        line-height 0.5rem
        padding 0 0.2rem
        border-radius 0.5rem
        border 1px solid #BEBBB5
        color #333333
        margin-left 0.2rem
  .spyp-album-intro
    margin-bottom 0.1rem
    background-color #ffffff
    padding 0.4rem 0.2rem
    .spyp-album-intro-title
      font-size 0.32rem
      color #9C9890
    .spyp-album-intro-content
      color #333333
      font-size 0.3rem
      line-height 0.48rem
      margin-top 0.3rem
  .spyp-album-anchor
    background-color #ffffff
    margin-bottom 0.1rem
  .spyp-album-comment
    background-color #ffffff
