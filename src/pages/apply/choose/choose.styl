.choose
	background: #F0F0F0
	height: 100%
	margin-top: 0.8rem
	.combo-list
		padding: 0.4rem 0.34rem
		.list-item
			display: flex
			height: 2.18rem
			margin-bottom: 0.4rem
			.left-part
				width: 0.2rem
				height: 100%
				background: url('left_bg.png') no-repeat top
				background-size: 100% 100%
			.content
				position: relative
				flex: 1
				height: 2.18rem
				padding-top: 0.28rem
				padding-left: 0.3rem
				color: #fff
				background: url('content_bg.png')
				background-size: 100% 100%
				.top
					font-size: 0.34rem
					line-height: 0.34rem
					> .group
						padding: 0 0.02rem
						background-color: #B6D114
				.readme
					// margin-top 0.15rem
					margin-top 0.35rem
				.deadline
					position: absolute
					bottom: 0.78rem
					font-size: 0.24rem
				.bottom
					position: absolute
					bottom: 0.3rem
					display: flex
					width: 90%
					line-height: 0.28rem
					font-size: 0.28rem
					.remain
						flex: 1
					.price
						flex: 1
						text-align: right
						font-size: 0.24rem
						> .big
							font-size: 0.32rem
							vertical-align baseline
			.right-part
				position: relative
				width: 1.5rem
				height: 100%
				background: url('right_bg.png') no-repeat top
				background-size: 100%
				> .num
					position: absolute
					font-size: 0.3rem
					line-height: 0.7rem
					top: 0.74rem
					left: 0.08rem
					width: 1.5rem
					text-align: center
				> button
					display: block
					height: 50%
					width: 100%
					border-top-style: none
					border-right-style: none
					border-bottom-style: none
					border-left-style: none
					outline: none
					background: none
	.footer
		position: fixed
		bottom: 0
		left: 0
		width: 100%
		height: 1.8rem
		.condition
			line-height: 0.8rem
			text-align: center
			font-size: 0
			background: #fff
			.check
				display: inline-block
				margin-right: 0.2rem
				width: 0.4rem
				height: 0.4rem
				border-radius: 50%
				vertical-align: middle
				background url('check.png') no-repeat center
				background-size 100%
				&.active
					background-image url('check_active.png')
			> span
				vertical-align: middle
				font-size: 0.26rem
				color: #A6A6A6
				&.protocol
					color: rgb(248, 189, 72)
		.bottom
			display: flex
			line-height: 1rem
			color: #fff
			text-align: center
			.left
				flex: 1
				background: rgb(249, 245, 171)
				.title
					width: 0.8rem
					height: 0.28rem
					margin: 0.1rem 0 0 0.1rem
					border-radius: 0.08rem
					background: rgb(81, 177, 38)
					font-size: 0.2rem
					line-height: 0.28rem
				.sum
					font-size: 0.24rem
					line-height: 0.5rem
					color: #252121
					.big
						font-size: 0.34rem
						vertical-align baseline
			.right
				flex: 1
				background: rgb(248, 189, 72)
				font-size: 0.34rem