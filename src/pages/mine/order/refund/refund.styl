.mine-order-refund
  padding-top 0.88rem
  background-color #fff
  .mine-order-refund-top
    position fixed
    width 100%
    left 0
    top 0
    z-index 3
    line-height 0.88rem
    height 0.88rem
    background-color #fff
    &.underline
      border-bottom 0.01rem solid #d6d6d6
    > .back-icon
      position absolute
      left 0.26rem
      top 0
      line-height 0.88rem
      > img
        display inline-block
        width 0.6rem
        height 0.6rem
        vertical-align middle
    .title
      width 100%
      font-size 0.34rem
      color #523f1a
      text-align center
      vertical-align middle
    .submit-btn
      position absolute
      right 0.1rem
      top 0
      font-size 0.34rem
      line-height 0.4rem
      color #f8bd48
      padding 0.2rem
  .refund-list
    .refunded
      background-image url("./refunded-signet.png")
      background-repeat no-repeat
      background-position top right
      background-size 1.4rem
      background-position 99% 5%
    > li
      padding 0.2rem
      border-bottom 1px solid #E6E6E6
      overflow hidden
      .refund-logo
        float left
        margin-right 0.2rem
        width 1.4rem
        height 1.4rem
        > img
          width 100%
          height 100%
      .refund-content
        overflow hidden
        .refund-reason
          margin 0
          padding 0
        > p
          font-size 0.26rem
          color #9C9890
          > span
            vertical-align top
            color #302D28
          .show-icon
            float right
            font-size 0.26rem
            color #523F1A
            text-decoration underline
          .show-icon:before
            content: ''
            display block
            width 0.2rem
            height 0.12rem
            float right
            margin-left 0.1rem
            vertical-align middle
            margin-top 0.14rem
          .look-up:before
            background-image url("./see-up.png")
            background-repeat no-repeat
            background-size 100%
          .look-down:before
            background-image url("./see-down.png")
            background-repeat no-repeat
            background-size 100%
        .apply-refund
          display block
          float right
          width 1.6rem
          height 0.6rem
          text-align center
          line-height 0.6rem
          font-size 0.3rem
          border-radius 3px
        .refuse
          background-color #F3F4F5
          color #BEBBB5
        .apply
          background-color #F8BD48
          color #523F1A
        .cancel
          background-color #6CC826
          color #fff
        .refund-title
          color #2F2D28
          font-size 0.3rem
        .refunding
          font-size 0.2rem
          color #F8BD48
          float right
    > li:last-child
      border-bottom none
