.mine-order-refund
  padding-top 0.88rem
  background-color #fff
  .mine-order-refund-top
    position fixed
    width 100%
    left 0
    top 0
    z-index 3
    line-height 0.88rem
    height 0.88rem
    background-color #fff
    &.underline
      border-bottom 0.01rem solid #d6d6d6
    > .back-icon
      position absolute
      left 0.26rem
      top 0
      line-height 0.88rem
      > img
        display inline-block
        width 0.6rem
        height 0.6rem
        vertical-align middle
    .title
      width 100%
      font-size 0.34rem
      color #523f1a
      text-align center
      vertical-align middle
    .submit-btn
      position absolute
      right 0.1rem
      top 0
      font-size 0.34rem
      line-height 0.4rem
      color #f8bd48
      padding 0.2rem
  .refund-list
    border-bottom 0.01rem solid #e6e6e6
// 退款提示
  .reminder
    width 100%
    padding 0.3rem 0.2rem
    background-color #fff9ab
    .title
      font-size 0.3rem
      line-height 1
      color #5f5d3e
    .reminder-list
      .reminder-item
        margin-top 0.2rem
        font-size 0.26rem
        line-height 1
        color #5f5d3e
// 活动退款信息
  .activity-info
    width 100%
    padding 0.1rem 0.2rem 0.3rem
    background-color #fff9ab
    > p
      margin-top 0.2rem
      font-size 0
      line-height 0.26rem
      display flex
      > .label-name
        font-size 0.26rem
        color #8d8850
        vertical-align middle
      > .text
        flex 1
        font-size 0.26rem
        color #523f1a
        text-align right
        vertical-align middle
  .activity-name
    margin 0.4rem 0.2rem 0
    font-size 0.3rem
    line-height 0.44rem
    color #6e5627
    padding 0.2rem
    background-color #f8f7f6
    border-radius 0.1rem
// 退款原因、
  .refund-reason, .refund-explain
    margin-top 0.6rem
    padding 0 0.2rem
    &.activity
      margin-top 0.4rem
    .title
      font-size 0
      line-height 0.3rem
      .text
        font-size 0.3rem
        color #523f1a
        vertical-align middle
      > img
        margin-left 0.1rem
        display inline-block
        width 0.6rem
        height 0.3rem
        vertical-align middle
      .must-btn
        margin-left 0.1rem
        display inline-block
        padding 0 0.1rem
        font-size 0.2rem
        line-height 0.3rem
        color #fff
        background-color #f8bd48
        border-radius 0.06rem
    .refund-type, .explain-box
      margin-top 0.2rem
      width 100%
      padding 0 0.2rem
      border 0.01rem solid #c7c7cc
      border-radius 0.06rem
      font-size 0.3rem
      line-height 0.88rem
      color #c7c7cc
      &.hasVal
        color #302d28
    .explain-box
      height 3rem
      padding 0.2rem
      line-height 0
      > textarea
        width 100%
        height 80%
        font-size 0.34rem
        line-height 0.56rem
        border none
        outline none
        resize none
        color #302d28
        &::placeholder
          color #c7c7cc
  .pic-list
    padding 0 0.2rem
    margin-top 0.2rem
    display flex
    flex-wrap wrap
    font-size 0
    .pic-item
      display inline-block
      width 1.2rem
      height 1.2rem
      line-height 1.2rem
      margin-right 0.2rem
      position relative
      text-align center
      > .pic
        display inline-block
        max-width 100%
        max-height 100%
        vertical-align middle
      .close-icon
        position absolute
        top 0.04rem
        right 0.04rem
        display inline-block
        width 0.3rem
        height 0.3rem
