.mine-order-evaluate
	padding-top 0.88rem
	background-color #fff
	.mine-order-evaluate-top
		position fixed
		width 100%
		left 0
		top 0
		z-index 3
		line-height 0.88rem
		height 0.88rem
		background-color #fff
		&.underline
			border-bottom 0.01rem solid #d6d6d6
		> .back-icon
			position absolute
			left 0.26rem
			top 0
			line-height 0.88rem
			> img
				display inline-block
				width 0.6rem
				height 0.6rem
				vertical-align middle
		.title
			width 100%
			font-size 0.34rem
			color #523f1a
			text-align center
			vertical-align middle
		.submit-btn
			position absolute
			right 0.1rem
			top 0
			font-size 0.34rem
			line-height 0.4rem
			color #f8bd48
			padding 0.2rem
	.evaluate-list
		border-bottom 0.01rem solid #e6e6e6
	// 单条评价
	.score-box
		padding 0.2rem
		display flex
		border-bottom 0.01rem solid #d6d6d6
		.left-media
			width 1.4rem
			height 1.4rem
			border 0.01rem solid #d6d6d6
			border-radius 0.1rem
			// line-height 1.4rem
			overflow hidden
			padding 0.02rem
			background-repeat no-repeat
			background-size contain
			background-position center center
			> img
				display inline-block
				max-width 100%
				max-height 100%
				vertical-align middle
		.right-part
			margin-left 0.2rem
			flex 1
			.title
				margin-top 0.15rem
				font-size 0
				line-height 0.3rem
				.label-name
					font-size 0.34rem
					vertical-align baseline
				.small
					margin-left 0.1rem
					font-size 0.24rem
					color #c7c7cc
					vertical-align baseline
			.star-list
				margin-top 0.2rem
				font-size 0
				.star-item
					display inline-block
					margin-right 0.2rem
					width 0.56rem
					height 0.56rem
					line-height 0.56rem
					position relative
					> img
						position absolute
						left 0
						top 0
						display inline-block
						width 100%
						height 100%
						transition 1s all linear !important
	.evaluate-content
		padding 0.4rem
		.text-box
			width 100%
			height 3.6rem
			border 0.02rem dashed #c7c7cc
			border-radius 0.1rem 0.1rem 0.1rem 0
			padding 0.3rem
			position relative
			> textarea
				width 100%
				height 80%
				font-size 0.34rem
				line-height 0.56rem
				border none
				outline none
				resize none
				color #302d28
				&::placeholder
					color #c7c7cc
			.limit
				position absolute
				right 0.3rem
				bottom 0.3rem
				font-size 0
				line-height 0.3rem
				color #666
				> .numbers
					font-size 0.3rem
					&.red
						color #fc474e
				> .max
					font-size 0.3rem
	.pic-list
		margin-top 0.2rem
		display flex
		flex-wrap wrap
		font-size 0
		.pic-item
			display inline-block
			width 1.2rem
			height 1.2rem
			line-height 1.2rem
			margin-right 0.2rem
			position relative
			text-align center
			> .pic
				display inline-block
				max-width 100%
				max-height 100%
				vertical-align middle
			.close-icon
				position absolute
				top 0.04rem
				right 0.04rem
				display inline-block
				width 0.3rem
				height 0.3rem
	// 感谢评价
	.thank-box
		width 100%
		height 2rem
		font-size 0.34rem
		line-height 2rem
		background-color #f8bd48
		color #fff
		text-align center
		background-image url('bg_bear.png'), url('bg_cloud.png'), url('bg_bottom.png')
		background-repeat no-repeat, no-repeat, no-repeat
		background-size 1.08rem 1.42rem, 2.02rem 0.56rem, 100% 0.76rem
		background-position 0.64rem 0.24rem, 98% 0.14rem, 0 100%
	// 遮罩
	.mask
		position fixed
		width 100%
		top 0
		left 0
		bottom 0
		z-index 5
		background rgba(0, 0, 0, 0.5)
		transition 0.3s all linear
		.dialog-box
			width 5.4rem
			height 4.94rem
			margin 40% auto
			padding 2.72rem 0 0 0
			background url('gift_dialog.png') no-repeat
			background-size 100% 100%
			text-align center
			.integral
				width 100%
				font-size 0
				line-height 0
				color #977128
				> .number
					font-size 0.76rem
					vertical-align baseline
				> .text
					margin-left 0.1rem
					font-size 0.24rem
					vertical-align baseline
			.desc-text
				margin-top 0.28rem
				font-size 0.26rem
				line-height 0.26rem
				color #fff13a
			.stars
				margin-top 0.2rem
				display inline-block
				> img
					display inline-block
					width 0.34rem
					height 0.34rem
					margin-right 0.1rem