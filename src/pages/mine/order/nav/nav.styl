.mine-order-nav
	position fixed
	top 0.88rem
	left 0
	width 100%
	z-index 5
	background-color #fff
	height 0.88rem
	line-height 0.88rem
	display flex
	.nav-item
		flex 1
		max-width 20%
		font-size 0.32rem
		color #302d28
		text-align center
		position relative
		&.active
			color #f8bd48
		> .bottom-bar
			position absolute
			bottom 0
			left 0
			width 100%
			height 0.04rem
			background-color #f8bd48
			transition 0.3s all linear