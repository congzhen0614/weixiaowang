.order-activity-code-view
	position fixed
	width 100%
	left 0
	top 0
	bottom 0
	z-index 9
	background-color rgba(255, 255, 255, 0.98)
	padding 0 1rem
	.close-icon
		position absolute
		width 0.4rem
		height 0.4rem
		top 0.6rem
		right 0.6rem
		background url('close_icon.png') no-repeat
		background-size 100% 100%
	.swiper-container
		width 100%
		margin 40% auto 0
		.swiper-wrapper
			width 100%
			height 100%
			.swiper-slide
				width 100%
				height 100%
				background-size contain
				background-repeat no-repeat
				background-position center
	.bottom-btns
		width 100%
		margin-top 1rem
		display flex
		overflow hidden
		.left-btn, .right-btn
			width 0.6rem
			height 0.6rem
		.left-btn
			background url('arrow_left.png') no-repeat
			background-size 100% 100%
		.right-btn
			background url('arrow_right.png') no-repeat
			background-size 100% 100%
		> p
			margin 0 0.2rem
			flex 1
			font-size 0.4rem
			line-height 0.6rem
			color #f8bd48
			text-align center
			overflow hidden
			text-overflow ellipsis
			white-space nowrap
