.logistics-particulars
  .logistics-header
    width 100%
    overflow hidden
    padding 0.14rem 0.26rem
    .back-icon
      width 0.6rem
      height 0.6rem
      float left
      margin-right -0.74rem
      > img
        width 100%
        height 100%
    .head-text
      height 0.6rem
      line-height 0.6rem
      font-size 0.34rem
      color #523F1A
      text-align center
  .logistics-content
    .logistics-message
      padding 0.4rem 0.3rem
      padding-top 0.2rem
      border-bottom 1px solid #E6E6E6
      .phone-icon
        display block
        margin-top 0.12rem
        width 0.6rem
        height 0.6rem
        float right
        background-image url("./phone-icon.png")
        background-size 100%
      > p
        margin-top 0.2rem
        font-size 0.3rem
        color #C7C7CC
        > span
          vertical-align top
          color: #302D28
    .logistics-list
      padding 0 0.3rem
      padding-top 0.8rem
      > li
        margin-top -1px
        font-size 0.3rem
        color #C7C7CC
        .logistics-list-content:before
          content: ''
          display block
          width 0.16rem
          height 0.16rem
          background-image url("delivery-status-end.png")
          background-repeat no-repeat
          background-size 100%
          float left
          // margin-top 0.15rem
          margin-left -0.08rem
        .content-first:before
          width 0.3rem
          height 0.3rem
          background-image url("delivery-status-ing.png")
          // margin-top 0.09rem
          margin-left -0.15rem
        .logistics-list-content
          padding-bottom 0.8rem
          border-left 1px solid #E6E6E6
          > p
            margin-left 0.4rem
          .logistics-list-time
            margin-top 0.2rem
            font-size 0.26rem
      > li:first-child
        color #F8BD48
      > li:last-child .logistics-list-content
        border none
