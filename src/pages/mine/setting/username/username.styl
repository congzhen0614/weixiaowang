.mine-setting-username
	padding-top 0.88rem
	background-color #fff
	padding-bottom 1rem
	.mine-setting-username-top
		position fixed
		width 100%
		left 0
		top 0
		z-index 3
		line-height 0.88rem
		height 0.88rem
		background-color #fcfaf8
		&.underline
			box-shadow 0 0.01rem 0 0 #d6d6d6
			// border-bottom 0.01rem solid #d6d6d6
		> .back-icon
			position absolute
			left 0.26rem
			top 0
			line-height 0.88rem
			> img
				display inline-block
				width 0.6rem
				height 0.6rem
				vertical-align middle
		.title
			width 100%
			font-size 0.34rem
			color #333
			text-align center
			vertical-align middle
	.main
		margin-top 1.2rem
		padding 0 0.4rem
		.username-box
			width 100%
			display flex
			line-height 1rem
			border-bottom 0.01rem solid #d6d6d6
			> input
				flex 1
				line-height 1rem
				background none
				outline none
				font-size 0.3rem
				color #333
				&::placeholder
					color #c7c7cc
			.close-icon
				padding-left 0.4rem
				line-height 1rem
				> img
					display inline-block
					width 0.32rem
					height 0.32rem
					vertical-align middle
		.submit-btn
			margin-top 1rem
			width 100%
			background-color #ffeac1
			border-radius 0.44rem
			line-height 0.88rem
			font-size 0.34rem
			color #fff
			text-align center
			&.active
				background-color #f8bd48