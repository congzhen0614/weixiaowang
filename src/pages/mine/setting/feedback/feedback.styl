.mine-feedback
	padding-top 0.88rem
	background-color #fff
	.mine-feedback-top
		position fixed
		width 100%
		left 0
		top 0
		z-index 3
		line-height 0.88rem
		height 0.88rem
		background-color #fff
		&.underline
			border-bottom 0.01rem solid #d6d6d6
		> .back-icon
			position absolute
			left 0.26rem
			top 0
			line-height 0.88rem
			> img
				display inline-block
				width 0.6rem
				height 0.6rem
				vertical-align middle
		.title
			width 100%
			font-size 0.34rem
			color #523f1a
			text-align center
			vertical-align middle
		.submit-btn
			position absolute
			right 0.1rem
			top 0
			font-size 0.34rem
			line-height 0.4rem
			color #f8bd48
			padding 0.2rem
	.feedback-content
		padding 0.6rem 0.4rem
		.text-box
			width 100%
			height 5.7rem
			border 0.02rem dashed #c7c7cc
			border-radius 0.1rem 0.1rem 0.1rem 0
			padding 0.3rem
			position relative
			> textarea
				width 100%
				height 80%
				font-size 0.34rem
				line-height 0.56rem
				border none
				outline none
				resize none
				color #302d28
				&::placeholder
					color #c7c7cc
			.limit
				position absolute
				right 0.3rem
				bottom 0.3rem
				font-size 0
				line-height 0.3rem
				color #666
				> .numbers
					font-size 0.3rem
					&.red
						color #fc474e
				> .max
					font-size 0.3rem