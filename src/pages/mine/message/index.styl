.mine-message
	padding-top 0.88rem
	background-color #f3f4f5
	.mine-message-top
		position fixed
		width 100%
		left 0
		top 0
		z-index 3
		line-height 0.88rem
		height 0.88rem
		background-color #fff
		&.underline
			border-bottom 0.01rem solid #d6d6d6
		> .back-icon
			position absolute
			left 0.26rem
			top 0
			line-height 0.88rem
			> img
				display inline-block
				width 0.6rem
				height 0.6rem
				vertical-align middle
		.title
			width 100%
			font-size 0.34rem
			color #523f1a
			text-align center
			vertical-align middle
		.submit-btn
			position absolute
			right 0.1rem
			top 0
			font-size 0.34rem
			line-height 0.4rem
			color #f8bd48
			padding 0.24rem
			> img
				display inline-block
				width 0.36rem
				height 0.36rem
				vertical-align middle
	.nav-list, .talk-list
		margin-top 0.16rem
		width 100%
		.list-item
			margin-top 0.02rem
			width 100%
			position relative
			overflow hidden
			&:first-child
				margin-top 0
			&.deleteShow
				.content
					transform translate(-1.6rem, 0)
				.delete-box
					transform translate(-1.6rem, 0)
			.content
				display flex
				height 1.2rem
				padding-right 0.2rem
				background-color #fff
				transition 0.3s all linear
				.left-part
					padding 0.2rem
					> img
						display inline-block
						width 0.8rem
						height 0.8rem
				.center-part
					flex 1
					overflow hidden
					height 1.2rem
					line-height 1.2rem
					display -webkit-box
					-webkit-box-orient horizontal
					-webkit-box-pack center
					-webkit-box-align center
					.box
						width 100%
						.title-time
							width 100%
							display flex
							.title
								flex 1
								font-size 0.34rem
								line-height 0.36rem
								color #333
							.time
								font-size 0.26rem
								line-height 0.32rem
								color #999
						.text
							width 100%
							margin-top 0.06rem
							font-size 0.26rem
							line-height 0.32rem
							color #888
							overflow hidden
							text-overflow ellipsis
							white-space nowrap
							&.unread
								color #333
			.delete-box
				position absolute
				right -1.6rem
				top 0
				width 1.6rem
				font-size 0.34rem
				line-height 1.2rem
				color #fff
				text-align center
				background-color #f8bd48
				transition 0.3s all linear