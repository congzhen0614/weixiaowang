.reset-children
	position fixed
	width 100%
	top 0
	left 0
	bottom 0
	z-index 5
	padding 0 0.6rem
	background-color rgba(255, 255, 255, 0.98)
	.close-icon
		position fixed
		right 0.6rem
		top 0.6rem
		width 0.4rem
		height 0.4rem
		> img
			display inline-block
			width 0.4rem
			height 0.4rem
	.reset-reminder
		margin-top 1.6rem
		width 100%
		text-align center
		font-size 0.26rem
		line-height 1
		color #f8bd48
	.children-list
		margin-top 0.6rem
		.children-item
			width 100%
			display flex
			height 1rem
			line-height 1rem 
			.left-part
				width 1rem
				height 1rem
				line-height 1rem
				border-radius 50%
				overflow hidden
				font-size 0
				> img
					display inline-block
					width 100%
					min-height 100%
					vertical-align middle
			.center-part
				margin-left 0.2rem
				flex 1
				font-size 0
				line-height 1rem
				> .name
					font-size 0.3rem
					color #523f1a
					vertical-align middle
				> img
					margin-left 0.1rem
					display inline-block
					width 0.3rem
					height 0.3rem
					vertical-align middle
			.right-part
				padding 0 0.28rem
				line-height 1rem
				> img
					display inline-block
					width 0.44rem
					height 0.44rem
					vertical-align middle