@import '../../../common/stylus/mixin.styl'
.mine-address-edit
	width 100%
	padding-top 0.88rem
	background-color #fff
	.mine-address-index-top
		position fixed
		width 100%
		left 0
		top 0
		z-index 3
		line-height 0.88rem
		height 0.88rem
		background-color #fff
		&.underline
			border-bottom 0.01rem solid #d6d6d6
		> .back-icon
			position absolute
			left 0.26rem
			top 0
			line-height 0.88rem
			> img
				display inline-block
				width 0.6rem
				height 0.6rem
				vertical-align middle
		.title
			width 100%
			font-size 0.34rem
			color #523f1a
			text-align center
			vertical-align middle
		.add-btn
			position absolute
			right 0.1rem
			top 0
			font-size 0.34rem
			line-height 0.88rem
			color #f8bd48
			padding 0 0.2rem
	.input-list
		width 100%
		.list-item
			border-1px(#e6e6e6)
			display flex
			line-height 1.08rem
			padding 0 0.32rem
			.name
				margin-right 0.2rem
				font-size 0.3rem
				color #333333
			> .input, input
				flex 1
				outline none
				text-align right
				font-size 0.3rem
				&::placeholder, &.placeholder
					color #c7c7cc
			> img
				display inline-block
				width 0.16rem
				height 0.28rem
				margin-left 0.32rem
				margin-top 0.41rem
				vertical-align middle
	> footer
		position fixed
		width 100%
		bottom 0
		left 0
		line-height 0.98rem
		font-size 0.32rem
		font-weight 500
		color #523f1a
		background #f8bd48
		text-align center
				