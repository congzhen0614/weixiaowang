.mine-focus
	padding-top 0.88rem
	background-color #fff
	.mine-focus-top
		position fixed
		width 100%
		left 0
		top 0
		z-index 3
		line-height 0.88rem
		height 0.88rem
		background-color #fff
		&.underline
			border-bottom 0.01rem solid #d6d6d6
		> .back-icon
			position absolute
			left 0.26rem
			top 0
			line-height 0.88rem
			> img
				display inline-block
				width 0.6rem
				height 0.6rem
				vertical-align middle
		.title
			width 100%
			font-size 0.34rem
			color #523f1a
			text-align center
			vertical-align middle
	// 列表
	.focus-list
		width 100%
		.focus-item
			width 100%
			display flex
			overflow hidden
			.left-media
				margin 0.2rem
				width 1rem
				height 1rem
				line-height 1rem
				text-align center
				> img
					display inline-block
					width 100%
					min-height 100%
					vertical-align middle
			.right-part
				padding-right 0.2rem
				flex 1
				overflow hidden
				height 1.4rem
				display flex
				border-bottom 0.01rem solid #d6d6d6
				.text-part
					flex 1
					overflow hidden
					.top-line
						font-size 0
						margin-top 0.3rem
						width 100%
						line-height 0.34rem
						> .text
							max-width 80%
							display inline-block
							font-size 0.34rem
							color #333
							vertical-align middle
							overflow hidden
							text-overflow ellipsis
							white-space nowrap
						> img
							margin-left 0.1rem
							display inline-block
							width 0.32rem
							height 0.32rem
							vertical-align middle
					.bottom-line
						margin-top 0.2rem
						width 100%
						font-size 0.26rem
						line-height 1
						color #999
						overflow hidden
						text-overflow ellipsis
						white-space nowrap
				.right-btn
					display inline-block
					vertical-align middle
					margin-left 0.6rem
					margin-top 0.3rem
					width 1.8rem
					font-size 0.3rem
					height 0.8rem
					line-height 0.8rem
					text-align center
					color #c7c7cc
					// padding 0 0.28rem
					border 0.01rem solid #c7c7cc
					border-radius 0.1rem
					&.cancel
						color #ff6060
						border 0.01rem solid #ff6060
					&.attention
						color #6e5627
						background-color #f8bd48
						border none
					
					