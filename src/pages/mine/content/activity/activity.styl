.mine-activity
	padding-top 0.88rem
	background-color #fff
	.mine-activity-top
		position fixed
		width 100%
		left 0
		top 0
		z-index 3
		line-height 0.88rem
		height 0.88rem
		background-color #fff
		&.underline
			border-bottom 0.01rem solid #d6d6d6
		> .back-icon
			position absolute
			left 0.26rem
			top 0
			line-height 0.88rem
			> img
				display inline-block
				width 0.6rem
				height 0.6rem
				vertical-align middle
		.title
			width 100%
			font-size 0.34rem
			color #523f1a
			text-align center
			vertical-align middle
	// 列表
	.activity-list
		width 100%
		padding 0 0.2rem
		.activity-item
			margin-top 0.4rem
			width 100%
			overflow hidden
			box-shadow 0 0 0.08rem 0 rgba(0, 0, 0, 0.15)
			border-radius 0.06rem
			.list-body
				display flex
				padding 0.2rem
				background-color #fff
				.left-part
					width 1.4rem
					height 1.4rem
					line-height 1.4rem
					border 0.01rem solid #d6d6d6
					border-radius 0.1rem
					font-size 0
					overflow hidden
					> img
						display inline-block
						width 100%
						min-height 50%
						vertical-align middle
				.right-part
					margin-left 0.2rem
					flex 1
					height 1.4rem
					overflow hidden
					display -webkit-box
					-webkit-box-orient horizontal
					-webkit-box-pack center
					-webkit-box-align center
					.box
						width 100%
						.name
							font-size 0.3rem
							line-height 0.4rem
							color #333
						.price
							margin-top 0.2rem
							font-size 0
							line-height 0
							color #f8bd48
							> .small
								font-size 0.26rem
								line-height 0.34rem
								vertical-align baseline
							> .big
								font-size 0.34rem
								line-height 0.36rem
								vertical-align baseline
			.bottom-btns
				padding 0 0.2rem
				font-size 0
				line-height 1rem
				background-color #f8f7f6
				text-align right
				> span
					margin-left 0.2rem
					display inline-block
					font-size 0.3rem
					line-height 0.6rem
					padding 0 0.15rem
					border-radius 0.1rem
					border-width 0.01rem
					border-style solid
					border-color #f8bd48
					color #f8bd48
					&.commented
						color #d5d2d0
						border none
						background-color #fff
					&.comment
						color #fff
						background-color #f8bd48
						border none
						
				
			