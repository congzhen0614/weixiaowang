.mine-collect-nav
	position fixed
	top 0.88rem
	left 0
	width 100%
	background-color #fff
	height 1.28rem
	line-height 1.28rem
	display flex
	border-bottom 0.01rem solid #d6d6d6
	.nav-item
		flex 1
		max-width 25%
		font-size 0.32rem
		color #302d28
		text-align center
		position relative
		&.active
			color #f8bd48
		> .bottom-bar
			position absolute
			bottom 0
			left 0
			width 100%
			height 0.04rem
			background-color #f8bd48
			transition 0.3s all linear