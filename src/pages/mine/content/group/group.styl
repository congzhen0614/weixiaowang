.mine-group
	padding-top 0.88rem
	background-color #fff
	.mine-group-top
		position fixed
		width 100%
		left 0
		top 0
		z-index 3
		line-height 0.88rem
		height 0.88rem
		background-color #fff
		&.underline
			border-bottom 0.01rem solid #d6d6d6
		> .back-icon
			position absolute
			left 0.26rem
			top 0
			line-height 0.88rem
			> img
				display inline-block
				width 0.6rem
				height 0.6rem
				vertical-align middle
		.title
			width 100%
			font-size 0.34rem
			color #523f1a
			text-align center
			vertical-align middle
	.group-list
		width 100%
		.group-item
			padding 0.2rem
			display flex
			.left-part
				width 1.8rem
				height 1.8rem
				font-size 0
				line-height 1.8rem
				border 0.01rem solid #d6d6d6
				border-radius 0.1rem
				overflow hidden
				> img
					display inline-block
					width 100%
					vertical-align middle
			.right-part
				margin-left 0.2rem
				flex 1
				height 1.8rem
				display -webkit-box
				-webkit-box-orient horizontal
				-webkit-box-pack center
				-webkit-box-align center
				.box
					width 100%
					.name
						font-size 0.3rem
						line-height 0.4rem
						color #333
						overflow hidden
						text-overflow ellipsis
						display -webkit-box
						-webkit-box-orient vertical
						-webkit-line-claml 3
					.type
						margin-top 0.2rem
						font-size 0
						line-height 0.26rem
						color #f8bd48
						> .num
							font-size 0.26rem
						> .all
							font-size 0.26rem
					.bottom-btns
						margin-top 0.2rem
						> .bottom-btn
							display inline-block
							padding 0 0.15rem
							font-size 0.2rem
							line-height 0.32rem
							border-radius 0.16rem
							&.grouping, &.success
								color #fff
								background-color #f8bd48
							&.backed
								color #fff
								background-color #ff6060
							&.failed
								color #c8bfaf
								background-color #efeeea